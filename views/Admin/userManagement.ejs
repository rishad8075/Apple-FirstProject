<%- include("../partials/adminSide-bar.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
    :root {
    --bg-deep: #0f0f10;
    --bg-card: #18181b;
    --bg-input: #27272a;
    --accent: #3d8bfd;
    --border: #2d2d30;
    --text-main: #f4f4f5;
   
    --text-muted: #d1d1d6; 
}


.text-muted {
    color: var(--text-muted) !important;
}


.table-custom th {
    color: #ffffff;
    font-weight: 700;
}

        body {
            background-color: var(--bg-deep);
            color: var(--text-main);
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            margin: 0;
            
        }

        .main-content {
            margin-left: 240px;
            padding: 2.5rem;
            transition: all 0.3s ease;
        }

        /* --- Stats Cards --- */
        .stat-card {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }

      
        .card-main {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .card-header-custom {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid var(--border);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

      
        .table-responsive-custom {
            overflow-x: auto;
            scrollbar-width: thin;
            scrollbar-color: var(--border) transparent;
        }

        .table-responsive-custom::-webkit-scrollbar {
            height: 6px;
        }
        .table-responsive-custom::-webkit-scrollbar-thumb {
            background: var(--border);
            border-radius: 10px;
        }

        .table-custom {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            white-space: nowrap; 
        }

        .table-custom th {
            background: #1f1f23;
            padding: 1rem 1.5rem;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--text-muted);
            border-bottom: 1px solid var(--border);
        }

        .table-custom td {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid var(--border);
            font-size: 0.9rem;
        }

        .table-custom tbody tr:hover {
            background: rgba(255, 255, 255, 0.02);
        }

      
        .search-wrapper {
            position: relative;
            max-width: 350px;
            width: 100%;
        }
        .search-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
        }
        .search-input {
            background: var(--bg-input);
            border: 1px solid var(--border);
            color: white;
            padding: 0.6rem 1rem 0.6rem 2.5rem;
            border-radius: 10px;
            width: 100%;
        }
        .search-input:focus {
            outline: none;
            border-color: var(--accent);
            background: #2d2d32;
        }

        .badge-status {
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 0.75rem;
            font-weight: 600;
        }

    
        .pagination { gap: 6px; padding: 1.5rem; margin: 0; }
        .page-link {
            background: var(--bg-input);
            border: 1px solid var(--border);
            color: var(--text-main);
            border-radius: 8px !important;
            transition: 0.2s;
        }
        .page-item.active .page-link {
            background: var(--accent);
            border-color: var(--accent);
        }

        @media (max-width: 992px) {
            .main-content { margin-left: 0; padding: 1rem; padding-top: 5rem; }
            .card-header-custom { flex-direction: column; align-items: stretch; }
            .search-wrapper { max-width: 100%; }
        }
    </style>
</head>
<body>

<div class="main-content">
    
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                    <i class="fas fa-users"></i>
                </div>
                <div>
                    <h5 class="mb-0 fw-bold"><%= totalUsers %></h5>
                    <p class="text-muted small mb-0">Total Customers</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon bg-success bg-opacity-10 text-success">
                    <i class="fas fa-user-check"></i>
                </div>
                <div>
                    <h5 class="mb-0 fw-bold"><%= users.filter(u => !u.isBlocked).length %></h5>
                    <p class="text-muted small mb-0">Active Users</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon bg-danger bg-opacity-10 text-danger">
                    <i class="fas fa-user-slash"></i>
                </div>
                <div>
                    <h5 class="mb-0 fw-bold"><%= users.filter(u => u.isBlocked).length %></h5>
                    <p class="text-muted small mb-0">Blocked Users</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card-main">
        <div class="card-header-custom">
            <h4 class="mb-0 fw-bold">Customer Directory</h4>
            
            <form method="GET" action="/admin/users" class="search-wrapper d-flex gap-2">
                <div class="position-relative flex-grow-1">
                    <i class="fas fa-search"></i>
                    <input type="text" name="search" value="<%= search || '' %>" class="search-input" placeholder="Search by name/email...">
                </div>
                <button type="submit" class="btn btn-primary px-3">Filter</button>
                <% if (search) { %>
                    <a href="/admin/users" class="btn btn-outline-secondary px-3">Reset</a>
                <% } %>
            </form>
        </div>

        <div class="table-responsive-custom">
            <table class="table-custom">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Account Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td class="fw-semibold"><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td class="text-muted"><%= user.phoneNumber || 'Not Provided' %></td>
                            <td>
                                <% if (user.isBlocked) { %>
                                    <span class="badge-status bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25">
                                        <i class="fas fa-circle me-1 small"></i> Blocked
                                    </span>
                                <% } else { %>
                                    <span class="badge-status bg-success bg-opacity-10 text-success border border-success border-opacity-25">
                                        <i class="fas fa-circle me-1 small"></i> Active
                                    </span>
                                <% } %>
                            </td>
                            <td class="text-center">
                                <% if (user.isBlocked) { %>
                                    <button class="btn btn-success btn-sm px-4 fw-bold" onclick="confirmAction('<%= user._id %>', 'unblock')">
                                        <i class="fas fa-undo me-2"></i>Unblock
                                    </button>
                                <% } else { %>
                                    <button class="btn btn-outline-danger btn-sm px-4 fw-bold" onclick="confirmAction('<%= user._id %>', 'block')">
                                        <i class="fas fa-ban me-2"></i>Block User
                                    </button>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <p class="text-muted small ps-4 mb-0">Showing page <%= page %> of <%= Math.ceil(totalUsers / limit) %></p>
            <nav>
                <ul class="pagination">
                    <% for (let i = 1; i <= Math.ceil(totalUsers / limit); i++) { %>
                        <li class="page-item <%= page === i ? 'active' : '' %>">
                            <a class="page-link" href="/admin/users?page=<%= i %>&search=<%= search || '' %>"><%= i %></a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div>
</div>
<script>
function confirmAction(userId, action) {
    Swal.fire({
        title: 'Confirm Action',
        text: `Are you sure you want to ${action} this user?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: action === 'block' ? '#ef4444' : '#10b981',
        cancelButtonColor: '#3f3f46',
        confirmButtonText: action === 'block' ? 'Yes, Block!' : 'Yes, Unblock!',
        background: '#18181b',
        color: '#fff'
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/admin/users/${userId}/${action}`, { 
                method: 'POST',
                headers: { 'Content-Type': 'application/json' } 
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: 'Success!',
                        text: data.message,
                        icon: 'success',
                        background: '#18181b',
                        color: '#fff'
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: data.message,
                        icon: 'error',
                        background: '#18181b',
                        color: '#fff'
                    });
                }
            })
            .catch(() => Swal.fire('Error!', 'Something went wrong!', 'error'));
        }
    });
}
</script>

</body>
</html>
