<%- include("../partials/adminSide-bar.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Return Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    
    <style>
        :root {
            --bg-deep: #0f0f10;
            --bg-card: #18181b;
            --bg-input: #27272a;
            --accent: #3d8bfd;
            --border: #2d2d30;
            --text-main: #f4f4f5;
            --text-muted: #d1d1d6; /* Brighter muted text for visibility */
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
        }

        body { 
            background-color: var(--bg-deep); 
            color: var(--text-main); 
            font-family: "Inter", sans-serif; 
            margin: 0;
        }

        .main-content {
            margin-left: 240px;
            padding: 2.5rem;
            transition: all 0.3s ease;
        }

        /* --- Stats Cards --- */
        .stat-card {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 1.25rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        .stat-icon {
            width: 42px;
            height: 42px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
        }

        /* --- Main Card --- */
        .admin-card { 
            background: var(--bg-card); 
            border: 1px solid var(--border); 
            border-radius: 20px; 
            padding: 2rem; 
            box-shadow: 0 10px 30px rgba(0,0,0,0.4); 
        }

        /* --- Table Styling --- */
        .table-responsive-custom {
            overflow-x: auto;
            scrollbar-width: thin;
        }

        .table-dark-custom { 
            width: 100%;
            border-collapse: separate; 
            border-spacing: 0;
        }

        .table-dark-custom th { 
            background-color: #1f1f23; 
            font-weight: 700; 
            text-transform: uppercase; 
            font-size: 0.75rem; 
            border-bottom: 2px solid var(--border); 
            padding: 1rem; 
            letter-spacing: 1px;
            color: #ffffff;
        }

        .table-dark-custom td { 
            padding: 1rem; 
            vertical-align: middle; 
            border-bottom: 1px solid var(--border);
            font-size: 0.9rem;
            white-space: nowrap; /* Keep layout clean */
        }

        /* Allow Reason column to wrap slightly but not break */
        .reason-cell {
            white-space: normal !important;
            min-width: 200px;
            max-width: 300px;
            line-height: 1.4;
        }

        .table-dark-custom tbody tr:hover { background-color: rgba(255,255,255,0.02); }

        /* --- Badges --- */
        .status-badge {
            padding: 5px 12px;
            border-radius: 8px;
            font-size: 0.75rem;
            font-weight: 700;
            display: inline-block;
        }
        .badge-accepted { background: rgba(16, 185, 129, 0.1); color: var(--success); border: 1px solid rgba(16, 185, 129, 0.2); }
        .badge-rejected { background: rgba(239, 68, 68, 0.1); color: var(--danger); border: 1px solid rgba(239, 68, 68, 0.2); }
        .badge-pending { background: rgba(245, 158, 11, 0.1); color: var(--warning); border: 1px solid rgba(245, 158, 11, 0.2); }

        img.product-img { 
            width: 40px; 
            height: 40px; 
            border-radius: 8px; 
            margin-right: 12px; 
            object-fit: cover; 
            border: 1px solid var(--border);
        }

        .text-muted { color: var(--text-muted) !important; }

        /* --- Buttons --- */
        .btn-action {
            padding: 6px 14px;
            font-weight: 600;
            font-size: 0.85rem;
            border-radius: 8px;
        }

        @media (max-width: 992px) {
            .main-content { margin-left: 0; padding: 1rem; padding-top: 5rem; }
        }
    </style>
</head>
<body>

<div class="main-content">
    <div class="admin-header d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Return Requests</h2>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-6 col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-primary bg-opacity-10 text-primary"><i class="fas fa-list"></i></div>
                <div>
                    <h6 class="mb-0 fw-bold"><%= requests.length %></h6>
                    <small class="text-muted">Total</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-warning bg-opacity-10 text-warning"><i class="fas fa-clock"></i></div>
                <div>
                    <h6 class="mb-0 fw-bold"><%= requests.filter(r => r.status === 'PENDING').length %></h6>
                    <small class="text-muted">Pending</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-success bg-opacity-10 text-success"><i class="fas fa-check-circle"></i></div>
                <div>
                    <h6 class="mb-0 fw-bold"><%= requests.filter(r => r.status === 'ACCEPTED').length %></h6>
                    <small class="text-muted">Accepted</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-danger bg-opacity-10 text-danger"><i class="fas fa-times-circle"></i></div>
                <div>
                    <h6 class="mb-0 fw-bold"><%= requests.filter(r => r.status === 'REJECTED').length %></h6>
                    <small class="text-muted">Rejected</small>
                </div>
            </div>
        </div>
    </div>

    <div class="admin-card">
        <div class="mb-4">
            <h5 class="fw-bold mb-1">Incoming Requests</h5>
            <p class="text-muted small mb-0">Verify quality before accepting. Refunds go directly to the customer's wallet.</p>
        </div>

        <div class="table-responsive-custom">
            <table class="table-dark-custom">
                <thead>
                    <tr>
                        <th>Req ID</th>
                        <th>Order</th>
                        <th>User</th>
                        <th>Product</th>
                        <th>Qty</th>
                        <th>Reason</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(requests && requests.length > 0) { %>
                        <% requests.forEach(req => { %>
                            <tr>
                                <td class="fw-bold">#<%= req._id.toString().slice(-6).toUpperCase() %></td>
                                <td>
                                    <a href="/admin/orders/detail/<%= req.orderId._id %>" class="text-accent text-decoration-none fw-bold" style="color: var(--accent);">
                                        <%= req.orderId.orderId %>
                                    </a>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span><%= req.userId.name %></span>
                                        <small class="text-muted" style="font-size: 0.75rem;"><%= req.userId.email %></small>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="<%= req.productImage %>" class="product-img" alt="product">
                                        <span class="fw-semibold"><%= req.productName %></span>
                                    </div>
                                </td>
                                <td><span class="badge bg-dark border border-secondary text-white"><%= req.quantity %></span></td>
                                <td class="reason-cell text-muted small"><%= req.reason %></td>
                                <td><%= new Date(req.createdAt).toLocaleDateString('en-GB', {day: '2-digit', month: 'short'}) %></td>
                                <td>
                                    <span class="status-badge 
                                        <% if(req.status === 'ACCEPTED') { %>badge-accepted
                                        <% } else if(req.status === 'REJECTED') { %>badge-rejected
                                        <% } else { %>badge-pending
                                        <% } %>">
                                        <i class="fas fa-circle me-1" style="font-size: 6px; vertical-align: middle;"></i> <%= req.status %>
                                    </span>
                                </td>
                                <td class="text-center">
                                    <% if (req.status === 'PENDING') { %>
                                        <div class="d-flex gap-2 justify-content-center">
                                            <button class="btn btn-success btn-action approve-return-btn" data-requestid="<%= req._id %>">
                                                Accept
                                            </button>
                                            <button class="btn btn-outline-danger btn-action reject-return-btn" data-requestid="<%= req._id %>">
                                                Reject
                                            </button>
                                        </div>
                                    <% } else { %>
                                        <span class="text-muted small fw-bold"><i class="fas fa-lock me-1"></i> Processed</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="9" class="text-center text-muted py-5">
                                <i class="fas fa-inbox d-block mb-2 fs-3"></i>
                                No return requests found.
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    /* --- SCRIPT LOGIC PRESERVED --- */
    
    // Approve Return
    document.querySelectorAll('.approve-return-btn').forEach(btn => {
        btn.addEventListener('click', async function() {
            const requestId = this.dataset.requestid;
            const result = await Swal.fire({
                title: 'Accept Return Request?',
                text: "The refund amount will be credited to the user's wallet.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#10b981',
                cancelButtonColor: '#3f3f46',
                confirmButtonText: 'Yes, Approve',
                background: '#18181b',
                color: '#fff'
            });

            if (result.isConfirmed) {
                const res = await fetch('/admin/returns/approve', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ requestId })
                });
                const data = await res.json();
                if(data.success) Swal.fire({title: 'Approved!', text: data.message, icon: 'success', background: '#18181b', color: '#fff'}).then(()=> location.reload());
                else Swal.fire({title: 'Error', text: data.message || 'Failed', icon: 'error', background: '#18181b', color: '#fff'});
            }
        });
    });

    // Reject Return
    document.querySelectorAll('.reject-return-btn').forEach(btn => {
        btn.addEventListener('click', async function() {
            const requestId = this.dataset.requestid;
            const result = await Swal.fire({
                title: 'Reject Return?',
                text: "This action cannot be undone and the order will remain delivered.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#3f3f46',
                confirmButtonText: 'Yes, Reject Request',
                background: '#18181b',
                color: '#fff'
            });

            if(result.isConfirmed) {
                const res = await fetch('/admin/returns/reject', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ requestId })
                });
                const data = await res.json();
                if(data.success) Swal.fire({title: 'Rejected!', text: data.message, icon: 'success', background: '#18181b', color: '#fff'}).then(()=> location.reload());
                else Swal.fire({title: 'Error', text: data.message || 'Failed', icon: 'error', background: '#18181b', color: '#fff'});
            }
        });
    });
</script>
</body>
</html>