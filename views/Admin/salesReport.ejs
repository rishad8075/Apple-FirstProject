<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Sales Report | Admin Panel</title>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

<style>
    body {
        background-color: #1a1b21;
        color: #fff;
        margin-left: 265px; /* Space for fixed sidebar */
        font-family: 'Segoe UI', sans-serif;
    }

    /* Card Styles */
    .card-dark {
        background-color: #2b2e38 !important;
        border: none;
        color: #fff;
        border-radius: 10px;
    }

    .kpi-card-dark {
        background-color: #2b2e38;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        border: 1px solid #3c4049;
    }
    .kpi-title {
        font-size: 0.85rem;
        color: #a0a0a0;
        text-transform: uppercase;
        margin-bottom: 5px;
    }
    .kpi-value {
        font-size: 1.9rem;
        font-weight: 600;
    }

    /* Form Controls */
    .form-control-dark, .form-select-dark {
        background-color: #3c4049 !important;
        color: #fff !important;
        border: 1px solid #3c4049 !important;
    }
    .form-control-dark:focus, .form-select-dark:focus {
        border-color: #007bff !important;
        box-shadow: 0 0 0 0.25rem rgba(0,123,255,0.25);
    }

    /* Table Styles */
    .table-dark-custom {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }
    .table-dark-custom thead th {
        background-color: #3c4049;
        color: #a0a0a0;
        border-bottom: 2px solid #555;
        text-transform: uppercase;
        font-size: 0.85rem;
    }
    .table-dark-custom tbody td {
        background-color: #2b2e38;
        color: #fff;
        border-top: 1px solid #3c4049;
    }

    .date-range-fields {
        display: none;
        align-items: center;
        gap: 10px;
    }

    .download-buttons a {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    @media(max-width: 768px){
        body { margin-left: 0; }
        .kpi-card-dark { margin-bottom: 15px; }
        .date-range-fields { flex-direction: column; align-items: flex-start; }
    }
</style>
</head>
<body>
<%- include("../partials/adminSide-bar.ejs") %>

<div id="main-content" style="margin-left: 265px;padding-left: 20px;" class="p-4">

    <h1 class="mb-4"><i class="fas fa-chart-bar me-2"></i>Sales Report Dashboard</h1>

    <!-- Filter Card -->
    <div class="card card-dark shadow mb-4 p-4">
        <form id="reportFilterForm" class="d-flex flex-wrap align-items-end gap-3" method="GET" action="/admin/sales/report">
            
            <div>
                <label for="reportType" class="form-label">Report Period</label>
                <select id="reportType" name="type" class="form-select form-select-dark" onchange="toggleDateRange()">
                    <option value="daily" <%= type === 'daily' ? 'selected' : '' %>>Daily</option>
                    <option value="weekly" <%= type === 'weekly' ? 'selected' : '' %>>Weekly</option>
                    <option value="monthly" <%= type === 'monthly' ? 'selected' : '' %>>Monthly</option>
                    <option value="yearly" <%= type === 'yearly' ? 'selected' : '' %>>Yearly</option>
                    <option value="custom" <%= type === 'custom' ? 'selected' : '' %>>Custom</option>
                </select>
            </div>

            <div id="dateRangeFields" class="date-range-fields">
                <div>
                    <label for="startDate" class="form-label mb-0">From:</label>
                    <input type="date" id="startDate" name="startDate" class="form-control form-control-dark" value="<%= startDate || '' %>">
                </div>
                <div>
                    <label for="endDate" class="form-label mb-0">To:</label>
                    <input type="date" id="endDate" name="endDate" class="form-control form-control-dark" value="<%= endDate || '' %>">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-filter me-1"></i> Apply Filter
            </button>
        </form>

        <div class="mt-4 d-flex justify-content-end gap-2 download-buttons">
            <a href="/admin/sales/download/excel?<%= new URLSearchParams(query).toString() %>" class="btn btn-success">
                <i class="fas fa-file-excel"></i> Excel
            </a>
            <a href="/admin/sales/download/pdf?<%= new URLSearchParams(query).toString() %>" class="btn btn-danger">
                <i class="fas fa-file-pdf"></i> PDF
            </a>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row g-4 mb-5">
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card-dark text-success">
                <div class="kpi-title">Net Sales (Revenue)</div>
                <div class="kpi-value text-success">₹<%= (overallMetrics.totalSales || 0).toFixed(2) %></div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card-dark text-white">
                <div class="kpi-title">Total Orders Placed</div>
                <div class="kpi-value text-info"><%= overallMetrics.orderCount || 0 %></div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card-dark text-white">
                <div class="kpi-title">Total Discount (Offers)</div>
                <div class="kpi-value text-warning">₹<%= (overallMetrics.totalDiscount || 0).toFixed(2) %></div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card-dark text-white">
                <div class="kpi-title">Total Coupon Deduction</div>
                <div class="kpi-value text-danger">₹<%= (overallMetrics.totalCoupon || 0).toFixed(2) %></div>
            </div>
        </div>
    </div>

    <!-- Detailed Sales Table -->
    <div class="card card-dark shadow p-4">
        <h3 class="mb-3">Detailed Sales Transactions</h3>
        <div class="table-responsive">
            <table class="table table-dark-custom table-hover table-striped mb-0">
                <thead>
                    <tr>
                        <th style="width: 15%;">Date</th>
                        <th style="width: 20%;">Order ID</th>
                        <th class="text-end">Gross Amount</th>
                        <th class="text-end">Offer Discount</th>
                        <th class="text-end">Coupon Deduction</th>
                        <th class="text-end">Net Revenue</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (sales && sales.length > 0) { %>
                        <% sales.forEach(order => { 
                            const amount = order.amount || 0;
                            const totalDiscount = order.totalDiscount || 0;
                            const totalCoupon = order.totalCoupon || 0;
                            const netRevenue = amount - totalDiscount - totalCoupon;
                        %>
                            <tr>
                                <td><%= new Date(order.date).toLocaleDateString() %></td>
                                <td><a href="/admin/orders/detail/<%= order._id %>" class="text-info text-decoration-none"><%= order._id %></a></td>
                                <td class="text-end text-white">₹<%= amount.toFixed(2) %></td>
                                <td class="text-end text-warning">-₹<%= totalDiscount.toFixed(2) %></td>
                                <td class="text-end text-danger">-₹<%= totalCoupon.toFixed(2) %></td>
                                <td class="text-end text-success fw-bold">₹<%= netRevenue.toFixed(2) %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">No sales data found for the selected period.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

</div>

<script>
    function toggleDateRange() {
        const type = document.getElementById('reportType').value;
        const dateRangeFields = document.getElementById('dateRangeFields');
        dateRangeFields.style.display = (type === 'custom') ? 'flex' : 'none';
    }
    document.addEventListener('DOMContentLoaded', toggleDateRange);
</script>

</body>
</html>
