<%- include("../partials/adminSide-bar.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report | Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <style>
        :root {
            --bg-deep: #0f0f10;
            --bg-card: #18181b;
            --bg-input: #27272a;
            --accent: #3d8bfd;
            --border: #2d2d30;
            --text-main: #f4f4f5;
            --text-muted: #d1d1d6;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
        }

        body {
            background-color: var(--bg-deep);
            color: var(--text-main);
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            margin: 0;
        }
        .text-muted {
    color: #d1d1d6 !important; 
}


.table-custom th, .table-dark-custom thead th {
    color: #ffffff !important;
    letter-spacing: 0.5px;
    background-color: #1f1f23 !important; 
}

        .main-content {
            margin-left: 240px; 
            padding: 2.5rem;
            transition: all 0.3s ease;
        }

        /* --- Filter Card --- */
        .card-custom {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }

        /* --- KPI (Stats) Cards --- */
        .kpi-card {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 1.5rem;
            height: 100%;
            transition: transform 0.2s;
        }
        .kpi-card:hover { transform: translateY(-5px); }
        .kpi-title { font-size: 0.75rem; text-transform: uppercase; letter-spacing: 1px; color: var(--text-muted); font-weight: 700; margin-bottom: 0.5rem; }
        .kpi-value { font-size: 1.5rem; font-weight: 800; }

        /* --- Form Controls --- */
        .form-select-dark, .form-control-dark {
            background-color: var(--bg-input) !important;
            border: 1px solid var(--border) !important;
            color: #fff !important;
            border-radius: 8px;
        }
        .date-range-fields { display: none; gap: 10px; }

        /* --- Responsive Table --- */
        .table-responsive-custom {
            overflow-x: auto;
            scrollbar-width: thin;
            scrollbar-color: var(--border) transparent;
        }
        .table-custom {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            white-space: nowrap;
        }
        .table-custom th {
            background: #1f1f23;
            padding: 1rem;
            font-size: 0.75rem;
            text-transform: uppercase;
            color: #fff;
            border-bottom: 2px solid var(--border);
        }
        .table-custom td {
            padding: 1.25rem 1rem;
            border-bottom: 1px solid var(--border);
            font-size: 0.9rem;
        }

        /* --- Responsive Breakpoints --- */
        @media (max-width: 992px) {
            .main-content { margin-left: 0; padding: 1rem; padding-top: 5rem; }
            .filter-row { flex-direction: column; align-items: stretch !important; }
        }
    </style>
</head>
<body>

<div class="main-content">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h2 class="fw-bold mb-0"><i class="fas fa-chart-line me-2 text-accent"></i>Sales Report</h2>
        
        <div class="d-flex gap-2">
            <a href="/admin/sales/download/excel?<%= new URLSearchParams(query).toString() %>" class="btn btn-outline-success btn-sm px-3">
                <i class="fas fa-file-excel me-1"></i> Excel
            </a>
            <a href="/admin/sales/download/pdf?<%= new URLSearchParams(query).toString() %>" class="btn btn-outline-danger btn-sm px-3">
                <i class="fas fa-file-pdf me-1"></i> PDF
            </a>
        </div>
    </div>

    <div class="card-custom mb-5">
        <form id="reportFilterForm" class="d-flex flex-wrap align-items-end gap-3 filter-row" method="GET" action="/admin/sales/report">
            <div style="min-width: 200px;">
                <label class="form-label small fw-bold text-muted">Report Period</label>
                <select id="reportType" name="type" class="form-select form-select-dark" onchange="toggleDateRange()">
                    <option value="daily" <%= type === 'daily' ? 'selected' : '' %>>Daily</option>
                    <option value="weekly" <%= type === 'weekly' ? 'selected' : '' %>>Weekly</option>
                    <option value="monthly" <%= type === 'monthly' ? 'selected' : '' %>>Monthly</option>
                    <option value="yearly" <%= type === 'yearly' ? 'selected' : '' %>>Yearly</option>
                    <option value="custom" <%= type === 'custom' ? 'selected' : '' %>>Custom Range</option>
                </select>
            </div>

            <div id="dateRangeFields" class="date-range-fields">
                <div>
                    <label class="form-label small fw-bold text-muted">From</label>
                    <input type="date" name="startDate" class="form-control form-control-dark" value="<%= startDate || '' %>">
                </div>
                <div>
                    <label class="form-label small fw-bold text-muted">To</label>
                    <input type="date" name="endDate" class="form-control form-control-dark" value="<%= endDate || '' %>">
                </div>
            </div>

            <button type="submit" class="btn btn-primary px-4 fw-bold">
                <i class="fas fa-filter me-2"></i>Apply Filter
            </button>
        </form>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="kpi-card border-start border-4 border-success">
                <div class="kpi-title">Net Sales</div>
                <div class="kpi-value text-success">₹<%= (overallMetrics.totalSales || 0).toLocaleString('en-IN', {minimumFractionDigits: 2}) %></div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kpi-card">
                <div class="kpi-title">Orders Placed</div>
                <div class="kpi-value"><%= overallMetrics.orderCount || 0 %></div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kpi-card">
                <div class="kpi-title">Offer Discounts</div>
                <div class="kpi-value text-warning">₹<%= (overallMetrics.totalDiscount || 0).toLocaleString('en-IN') %></div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kpi-card">
                <div class="kpi-title">Coupon Savings</div>
                <div class="kpi-value text-danger">₹<%= (overallMetrics.totalCoupon || 0).toLocaleString('en-IN') %></div>
            </div>
        </div>
    </div>

    <div class="card-custom">
        <h5 class="fw-bold mb-4">Detailed Transactions</h5>
        <div class="table-responsive-custom">
            <table class="table-custom">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Order ID</th>
                        <th class="text-end">Gross</th>
                        <th class="text-end">Discount</th>
                        <th class="text-end">Coupon</th>
                        <th class="text-end">Net Revenue</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (sales && sales.length > 0) { %>
                        <% sales.forEach(order => { 
                            const amount = order.amount || 0;
                            const totalDiscount = order.totalDiscount || 0;
                            const totalCoupon = order.totalCoupon || 0;
                            const netRevenue = amount - totalDiscount - totalCoupon;
                        %>
                            <tr>
                              <td><%= order.date ? new Date(order.date).toLocaleDateString('en-GB') : 'N/A' %></td>
                                <td><a href="/admin/orders/detail/<%= order._id %>" class="text-info text-decoration-none fw-semibold">#<%= order._id.toString().slice(-8).toUpperCase() %></a></td>
                                <td class="text-end fw-medium">₹<%= amount.toFixed(2) %></td>
                                <td class="text-end text-warning">-₹<%= totalDiscount.toFixed(2) %></td>
                                <td class="text-end text-danger">-₹<%= totalCoupon.toFixed(2) %></td>
                                <td class="text-end text-success fw-bold">₹<%= netRevenue.toFixed(2) %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">No sales data found for this period.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function toggleDateRange() {
        const type = document.getElementById('reportType').value;
        const dateRangeFields = document.getElementById('dateRangeFields');
        dateRangeFields.style.display = (type === 'custom') ? 'flex' : 'none';
    }
    document.addEventListener('DOMContentLoaded', toggleDateRange);
</script>

</body>
</html>