<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <style>
        .main-content { margin-left: 260px; padding: 20px; }
        .action-buttons { display: flex; gap: 5px; }
        .action-buttons .btn { min-width: 80px; }
        .thumbnail { width: 50px; height: 50px; object-fit: cover; border-radius: 5px; }
    </style>
</head>
<body>

<%- include("../partials/adminSide-bar.ejs") %>

<div class="main-content">
    <div class="content-header">
        <h2 class="content-title card-title">Products</h2>
    </div>

    <!-- Search -->
    <header class="card-header text-center mb-20">
        <form action="" method="get" class="d-inline">
            <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px; margin-left: 230px;">
                <input type="text" class="form-control border-0 rounded-pill" placeholder="Search products or brands" name="search">
                <button style="color: white;" class="btn border-0" type="submit">Search</button>
            </div>
        </form>
    </header>

    <!-- Products Table -->
    <div class="right mt-5">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Price (₹)</th>
                    <th>Offer (₹)</th>
                    <th>Offer %</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Variants</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(product => { %>
                <tr>
                    <td>
                        <% if(product.productImages && product.productImages.length > 0) { %>
                            <img src="<%= product.productImages[0] %>" class="thumbnail" />
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>
                    <td><%= product.productName %></td>
                    <td><%= product.category?.name || 'N/A' %></td>

                    <!-- Min-Max Price -->
                    <td>
                        <% if(product.variants && product.variants.length > 0) { %>
                            ₹<%= Math.min(...product.variants.map(v => v.salePrice)) %> -
                            ₹<%= Math.max(...product.variants.map(v => v.salePrice)) %>
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>

                    <!-- Offer Price -->
                    <td>
                        <% if(product.variants && product.variants.length > 0) { %>
                            ₹<%= Math.min(...product.variants.map(v => v.productOffer)) %>
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>

                    <!-- Offer % -->
                    <td>
                        <% if(product.variants && product.variants.length > 0) { %>
                            <%= Math.max(...product.variants.map(v => Math.round((v.productOffer / v.salePrice) * 100))) %>%
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>

                    <!-- Stock -->
                    <td>
                        <% if(product.variants && product.variants.length > 0) { %>
                            <%= product.variants.reduce((acc, v) => acc + v.stock, 0) %>
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>

                    <!-- Status -->
                    <td>
                        <% if(product.isBlocked) { %>
                            <span class="badge bg-danger">Blocked</span>
                        <% } else { %>
                            <span class="badge bg-success">Active</span>
                        <% } %>
                    </td>

                    <!-- View Variants -->
                    <td>
                        <% if(product.variants && product.variants.length > 0) { %>
                            <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#variantModal<%= product._id %>">View</button>

                            <!-- Variants Modal -->
                            <div class="modal fade" id="variantModal<%= product._id %>" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-lg modal-dialog-scrollable">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Variants of <%= product.productName %></h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Attributes</th>
                                                        <th>Sale Price</th>
                                                        <th>Offer</th>
                                                        <th>Stock</th>
                                                        <th>Images</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% product.variants.forEach(variant => { %>
                                                        <tr>
                                                            <td>
                                                                <% for(const [key, value] of variant.attributes) { %>
                                                                    <strong><%= key %>:</strong> <%= value %><br/>
                                                                <% } %>
                                                            </td>
                                                            <td>₹<%= variant.salePrice %></td>
                                                            <td>₹<%= variant.productOffer %></td>
                                                            <td><%= variant.stock %></td>
                                                            <td>
                                                                <% variant.images.forEach(img => { %>
                                                                    <img src="<%= img %>" class="thumbnail me-1 mb-1"/>
                                                                <% }) %>
                                                            </td>
                                                        </tr>
                                                    <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>

                    <!-- Actions -->
                    <td>
                        <div class="action-buttons">
                            <% if(product.isBlocked) { %>
                                <button class="btn btn-success btn-sm" onclick="confirmUnblock('<%= product._id %>')">Unblock</button>
                            <% } else { %>
                                <button class="btn btn-danger btn-sm" onclick="confirmBlock('<%= product._id %>')">Block</button>
                            <% } %>
                            <button class="btn btn-warning btn-sm text-white" onclick="location.href='/admin/edit-product/<%= product._id %>'">Edit</button>
                            <button class="btn btn-danger btn-sm" onclick="confirmDelete('<%= product._id %>', '<%= product.productName %>')">Delete</button>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script>
    function confirmDelete(productId, productName) {
        Swal.fire({
            title: 'Are you sure?',
            html: `You are about to delete <strong>${productName}</strong>.`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: `/admin/delete-product/${productId}`,
                    type: 'DELETE',
                    success: () => location.reload()
                });
            }
        });
    }

    function confirmBlock(productId) {
        Swal.fire({
            title: 'Block Product?',
            text: "This product will be hidden from customers.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, block it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.post(`/admin/block-product/${productId}`, () => location.reload());
            }
        });
    }

    function confirmUnblock(productId) {
        Swal.fire({
            title: 'Unblock Product?',
            text: "This product will be visible to customers.",
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Yes, unblock it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.post(`/admin/unblock-product/${productId}`, () => location.reload());
            }
        });
    }
</script>

</body>
</html>
