<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.productName %> - Product Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

  <style>
    /* ----------- MAGNIFIER ----------- */
    .magnifier-container {
      position: relative;
      width: 100%;
      max-height: 450px;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 8px;
      background-color: #fff;
      box-shadow: 0 0 8px rgba(0,0,0,0.05);
    }

    .magnifier-image {
      width: 100%;
      max-height: 450px;
      object-fit: contain;
      cursor: crosshair;
      border-radius: 6px;
    }

    .magnifier-container:hover {
      box-shadow: 0 0 12px rgba(0,0,0,0.15);
      transition: 0.2s ease;
    }

    .img-zoom-result {
      border: 1px solid #ccc;
      width: 450px;
      height: 450px;
      position: absolute;
      left: calc(100% + 20px);
      top: 30px;
      background-repeat: no-repeat;
      display: none;
      z-index: 99999;
      background-color: white;
      box-shadow: 0 0 10px rgba(0,0,0,0.2);
      overflow: hidden;
    }

    @media(max-width: 768px){
      .img-zoom-result { display: none !important; }
    }

    .thumbnail-img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      cursor: pointer;
      border: 1px solid #ddd;
      border-radius: 5px;
      margin-right: 5px;
    }
   

    .thumbnail-img.active { border: 2px solid #007bff; }

    .price { font-size: 1.8rem; font-weight: bold; }
    .old-price { text-decoration: line-through; color: #888; margin-left: 10px; }
    .badge-stock { font-size: 0.9rem; padding: 0.5em; }
    .related-products img { height: 200px; object-fit: cover; }
  </style>
</head>
<body>



             <%-include("../partials/header.ejs") %>  

<div class="container mt-4">

  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a style="text-decoration: none;color: #000;" href="/">Home</a></li>
      <li class="breadcrumb-item"><a style="text-decoration: none;color: #000;" href="/shop">Products</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= product.productName %></li>
    </ol>
  </nav>

  <div class="row g-4">
    <!-- Product Images -->
    <div class="col-lg-6">
      <div class="product-gallery mb-3 position-relative">
        <% let mainImage = (product.variants[0] && product.variants[0].images[0]) || '/uploads/product-images/default.png'; %>
        <div class="magnifier-container">
          <img id="mainImage" src="<%= mainImage %>" class="magnifier-image" alt="<%= product.productName %>">
        </div>
        <div id="zoomResult" class="img-zoom-result"></div>
      </div>

      <!-- Thumbnails -->
      <div class="d-flex flex-wrap mt-2">
        <% if (product.variants[0] && product.variants[0].images.length > 0) { %>
          <% product.variants[0].images.forEach((img, idx) => { %>
            <img class="thumbnail-img <%= idx === 0 ? 'active' : '' %>" 
                 src="<%= img %>" 
                 onclick="changeImage('<%= img %>', this)">
          <% }) %>
        <% } %>
      </div>
    </div>

    <!-- Product Info -->
    <div class="col-lg-6">
      <h2><%= product.productName %></h2>

      <!-- Category -->
      <% if(product.category && product.category.name) { %>
        <p>Category: <strong><%= product.category.name %></strong></p>
      <% } %>

      <!-- Brand -->
      <p>Brand: <strong><%= product.brand || 'APPLE' %></strong></p>

      <!-- Rating -->
      <div class="mb-2">
        Rating: 
        <span style="color:#f0ad4e;">
          <% for(let i=0; i<5; i++) { %>
            <% if(i < Math.round(product.rating || 0)) { %>★<% } else { %>☆<% } %>
          <% } %>
        </span>
        (<%= (product.reviews || []).length %> reviews)
      </div>

      <!-- Variant Attributes -->
      <% const variant = product.variants[0] || {}; %>
      <% if(variant.attributes) { %>
        <div class="mb-2">
          <% for(const [key, value] of Object.entries(variant.attributes)) { %>
            <span class="badge bg-secondary me-1"><%= key %>: <%= value %></span>
          <% } %>
        </div>
      <% } %>

      <!-- Price -->
      <div class="mb-3">
        <span class="price text-success">₹<%= variant.salePrice || 0 %></span>
        <% if(variant.productOffer > 0) { %>
          <span class="old-price">₹<%= variant.regularPrice %></span>
          <span class="text-danger ms-2"><%= variant.productOffer %>% OFF</span>
        <% } %>
      </div>

      <!-- Stock -->
      <div class="mb-3">
        <span class="badge badge-stock <%= variant.stock > 0 ? 'bg-success' : 'bg-danger' %>">
          <%= variant.stock > 0 ? 'In Stock' : 'Out of Stock' %>
        </span>
      </div>

      <!-- Add to Cart -->
 <button id="addToCartBtn" 
        class="btn btn-primary btn-lg" 
        data-product-id="<%= product._id %>" 
        data-variant-id="<%= variant._id %>" 
        <%= variant.stock === 0 ? 'disabled' : '' %>>
  <%= variant.stock === 0 ? 'Sold Out' : 'Add to Cart' %>
</button>

      <!-- Description -->
      <div class="mt-4">
        <h5>Description</h5>
        <p><%= product.description || 'No description available.' %></p>
      </div>

      <!-- Reviews -->
      <% if(product.reviews && product.reviews.length > 0) { %>
        <div class="mt-4">
          <h5>Reviews</h5>
          <% product.reviews.forEach(r => { %>
            <div class="border p-2 mb-2">
              <strong><%= r.userName || 'User' %></strong> - 
              <% for(let i=0;i<5;i++){ %>
                <% if(i<r.rating){ %>★<% } else { %>☆<% } %>
              <% } %>
              <p><%= r.comment %></p>
            </div>
          <% }) %>
        </div>
      <% } %>

    </div>
  </div>

  <div class="mt-4 p-3 border rounded bg-light">
  <h5>Sold By</h5>
  <p>Seller: <strong>Best Electronics Store</strong></p>
  <p>Rating: ★★★★☆ (4.5)</p>
  <p>Location: Mumbai, India</p>
  <a href="#" class="btn btn-sm btn-outline-secondary">Visit Store</a>
</div>

<!-- Offers -->
<div class="mt-3 p-3 border rounded bg-light">
  <h5>Available Offers</h5>
  <ul>
    <li>10% Cashback on XYZ Bank Cards</li>
    <li>Extra 5% off on next purchase</li>
    <li>Free shipping on orders above ₹5,000</li>
  </ul>
</div>

<!-- Shipping & Returns -->
<div class="mt-3 p-3 border rounded bg-light">
  <h5>Shipping & Returns</h5>
  <p>Estimated Delivery: 3-5 business days</p>
  <p>Return Policy: 7-day easy return</p>
  <p>Cash on Delivery available</p>
</div>

<!-- Q&A Section -->
<div class="mt-4">
  <h5>Customer Questions & Answers</h5>
  <div class="border p-2 mb-2">
    <strong>Q: Does it come with warranty?</strong>
    <p>A: Yes, 1-year manufacturer warranty included.</p>
  </div>
  <div class="border p-2 mb-2">
    <strong>Q: Can I get it in other colors?</strong>
    <p>A: Currently available only in Black and Silver.</p>
  </div>
  <form class="mt-2">
    <input type="text" class="form-control mb-2" placeholder="Ask a question">
    <button class="btn btn-primary btn-sm" type="submit">Submit</button>
  </form>
</div>

  <!-- Related Products -->
  <div class="mt-5">
    <h4>Related Products</h4>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3 related-products">
      <% (relatedProducts).forEach(p => { %>
        <div class="col">
          <div class="card h-100">
            <img src="<%= (p.variants[0] && p.variants[0].images[0]) || '/uploads/product-images/default.png' %>" class="card-img-top">
            <div class="card-body">
              <h6 class="card-title"><%= p.productName %></h6>
              <a href="/productDetails/<%= p._id %>" class="btn btn-sm btn-outline-primary mt-2">View</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

</div>
<%- include('../partials/footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>


document.getElementById('addToCartBtn')?.addEventListener('click', async function() {
  const btn = this;
  const productId = btn.dataset.productId;
  const variantId = btn.dataset.variantId;
  const quantity = 1; // default 1, can add quantity selector later

  btn.disabled = true; // prevent double-click

  try {
    const res = await fetch('/cart/add', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ productId, variantId, quantity })
    });

    const data = await res.json();

    if (data.success) {
      Swal.fire({
        icon: 'success',
        title: 'Added!',
        text: 'Product added to your cart.',
        showCancelButton: true,
        confirmButtonText: 'Go to Cart',
        cancelButtonText: 'Continue Shopping'
      }).then(result => {
        if (result.isConfirmed) {
          window.location.href = '/cart';
        }
      });
    } else {
      Swal.fire({
        icon: 'error',
        title: 'Oops!',
        text: data.message || 'Could not add product to cart.'
      });
    }

  } catch (err) {
    console.error(err);
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: 'Something went wrong. Please try again.'
    });
  } finally {
    btn.disabled = false;
  }
});


function enableZoom(imgID, resultID) {
  const img = document.getElementById(imgID);
  const result = document.getElementById(resultID);
  const scale = 1;

  img.addEventListener("mouseenter", () => {
    result.style.display = "block";
    result.style.backgroundImage = `url(${img.src})`;
    result.style.backgroundSize = img.width * scale + "px " + img.height * scale + "px";
  });

  img.addEventListener("mouseleave", () => {
    result.style.display = "none";
  });

  img.addEventListener("mousemove", function (e) {
    const rect = img.getBoundingClientRect();
    const x = e.clientX - rect.left;
    const y = e.clientY - rect.top;
    const posX = -(x * scale - result.offsetWidth / 2);
    const posY = -(y * scale - result.offsetHeight / 2);
    result.style.backgroundPosition = `${posX}px ${posY}px`;
  });
}

enableZoom("mainImage", "zoomResult");

function changeImage(src, thumb) {
  const main = document.getElementById("mainImage");
  const zoom = document.getElementById("zoomResult");

  main.src = src;
  zoom.style.backgroundImage = `url(${src})`;

  document.querySelectorAll(".thumbnail-img")
    .forEach(t => t.classList.remove("active"));

  thumb.classList.add("active");
}
</script>

</body>
</html>
