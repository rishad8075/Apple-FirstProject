<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>APPLLe | Future of Tech</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --brand-dark: #000000;
            --brand-accent: #0d6efd;
            --soft-bg: #f5f5f7;
            --card-shadow: 0 20px 40px rgba(0,0,0,0.06);
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #fff;
            color: var(--brand-dark);
            overflow-x: hidden;
        }

        /* --- Hero Section --- */
        .hero-wrap {
            background: var(--soft-bg);
            border-radius: 0 0 50px 50px;
            padding: 80px 0;
            margin-bottom: 60px;
            position: relative;
            overflow: hidden;
        }

        .hero-badge {
            background: rgba(13, 110, 253, 0.1);
            color: var(--brand-accent);
            padding: 6px 16px;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-block;
            margin-bottom: 20px;
        }

        .hero-title {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 800;
            line-height: 1.1;
            letter-spacing: -2px;
            margin-bottom: 25px;
        }

        .hero-img-box {
            position: relative;
            z-index: 1;
        }

        .hero-img-box img {
            filter: drop-shadow(0 30px 50px rgba(0,0,0,0.15));
            transition: transform 0.5s ease;
        }

        /* --- Feature Highlights --- */
        .feature-box {
            padding: 40px;
            text-align: center;
            border-radius: 24px;
            transition: all 0.3s ease;
        }
        .feature-icon {
            font-size: 2rem;
            margin-bottom: 20px;
            color: var(--brand-accent);
        }

        /* --- Product Cards (The Best Part) --- */
        .product-card {
            background: #fff;
            border: 1px solid #eee;
            border-radius: 28px;
            padding: 15px;
            transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
            position: relative;
        }

        .product-card:hover {
            transform: translateY(-12px);
            box-shadow: var(--card-shadow);
            border-color: transparent;
        }

        .img-container {
            background: var(--soft-bg);
            border-radius: 20px;
            height: 280px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
        }

        .img-container img {
            max-width: 80%;
            transition: transform 0.5s ease;
        }

        .product-card:hover .img-container img {
            transform: scale(1.1);
        }

        .wishlist-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            background: #fff;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            z-index: 2;
            transition: all 0.3s ease;
        }

        .wishlist-btn:hover {
            background: #ff4757;
            color: #fff;
        }

        .product-info {
            padding: 20px 10px 10px;
        }

        .category-label {
            font-size: 0.75rem;
            text-transform: uppercase;
            color: #888;
            letter-spacing: 1px;
            font-weight: 600;
        }

        .price-tag {
            font-size: 1.25rem;
            font-weight: 700;
        }

        .btn-buy {
            background: var(--brand-dark);
            color: #fff;
            border-radius: 12px;
            padding: 12px;
            font-weight: 600;
            width: 100%;
            margin-top: 15px;
            border: none;
            transition: 0.3s;
        }

        .btn-buy:hover {
            background: var(--brand-accent);
            transform: scale(1.02);
        }

        /* --- Section Titles --- */
        .section-header {
            margin-bottom: 50px;
        }
        .section-header h2 {
            font-weight: 800;
            font-size: 2.5rem;
        }
    </style>
</head>
<body>

    <%- include("../partials/header.ejs") %>

    <section class="hero-wrap">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <span class="hero-badge animate__animated animate__fadeInDown">New Arrival</span>
                    <h1 class="hero-title animate__animated animate__fadeInUp">Next-gen <br><span class="text-primary">Performance.</span></h1>
                    <p class="lead text-muted mb-4 animate__animated animate__fadeInUp" style="animation-delay: 0.2s">
                        Experience the power of the new MacBook Air. Thinner, lighter, and faster than ever before.
                    </p>
                    <div class="d-flex gap-3 animate__animated animate__fadeInUp" style="animation-delay: 0.4s">
                        <a href="/shop" class="btn btn-primary btn-lg px-5 rounded-pill shadow">Shop Collection</a>
                        <a href="#products" class="btn btn-outline-dark btn-lg px-5 rounded-pill">Explore</a>
                    </div>
                </div>
                <div class="col-lg-6 hero-img-box animate__animated animate__zoomIn">
                    <img src="/images/banner Macbook.jpg" alt="MacBook" class="img-fluid rounded-4">
                </div>
            </div>
        </div>
    </section>

    <section class="container mb-5">
        <div class="row g-4 text-center">
            <div class="col-md-4">
                <div class="feature-box">
                    <i class="fas fa-shipping-fast feature-icon"></i>
                    <h4>Free Delivery</h4>
                    <p class="text-muted">On all orders over ₹49,000</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box" style="background: var(--soft-bg);">
                    <i class="fas fa-shield-alt feature-icon"></i>
                    <h4>2 Year Warranty</h4>
                    <p class="text-muted">Full protection for your tech</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box">
                    <i class="fas fa-headset feature-icon"></i>
                    <h4>Expert Support</h4>
                    <p class="text-muted">24/7 technical assistance</p>
                </div>
            </div>
        </div>
    </section>

    <section class="container py-5" id="products">
        <div class="section-header text-center">
            <h2 class="animate__animated animate__fadeIn">Curated Collection</h2>
            <p class="text-muted">Hand-picked premium electronics for your lifestyle</p>
        </div>

        <div class="row g-4">
            <% products.forEach(product => { %>
                <div class="col-sm-6 col-lg-4 col-xl-3">
                    <div class="product-card">
                        <button class="wishlist-btn" data-product-id="<%= product._id %>"  ><i class="far fa-heart"></i></button>
                        
                        <a href="/productDetails/<%= product._id %>" class="text-decoration-none">
                            <div class="img-container">
                                <% if(product.image && product.image[0]) { %>
                                    <img src="<%= product.image[0] %>" alt="<%= product.productName %>">
                                <% } else { %>
                                    <img src="/images/default-product.jpg" alt="Product">
                                <% } %>
                            </div>
                        </a>

                        <div class="product-info text-center">
                            <span class="category-label"><%= product.categoryName || 'Electronics' %></span>
                            <h5 class="fw-bold my-2 text-truncate"><%= product.productName %></h5>
                            
                            <div class="price-tag mb-3">
                                ₹<%= product.finalPrice%>
                                <% if(product.hasDiscount) { %>
                                    <span class="text-muted text-decoration-line-through fs-6 ms-2">₹<%= product.salePrice %></span>
                                <% } %>
                            </div>

                            <button class="btn-buy add-to-cart-btn" 
                             data-product-id="<%= product._id %>" 
                                data-variant-id="<%= product.variants?.[0]?._id || '' %>"
data-stock="<%= product.variants?.[0]?.stock || 0 %>">
                                <i class="fas fa-plus me-2"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>

    <%- include("../partials/footer.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>

    document.querySelectorAll(".wishlist-btn").forEach(btn=>{
        btn.addEventListener("click",async function() {

            const productId = this.dataset.productId;
            console.log(productId)

            const res = await fetch('/wishlist/toggle',{
                method:"POST",
                headers:{'content-Type':"application/json"},
                body:JSON.stringify({productId:productId})
            })

            const data = await res.json()

            if(data.success){
                Swal.fire("success",data.message,"success")

            }else{
                Swal.fire("error",data.message,"error")
            }
            
        })
    });





$(document).on('click', '.add-to-cart-btn', async function () {
    const btn = $(this);
    const productId = btn.data('product-id');
    const variantId = btn.data('variant-id');
    const stock = Number(btn.data('stock'));
    const quantity = 1;

    if (stock === 0) {
        Swal.fire({
            icon: 'error',
            title: 'Out of Stock',
            text: 'This product is currently out of stock.'
        });
        return;
    }

    btn.prop('disabled', true);

    try {
        const res = await fetch('/cart/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId, variantId, quantity })
        });

        const data = await res.json();

        if (data.success) {
            Swal.fire({
                icon: 'success',
                title: 'Added!',
                text: 'Product added to your cart.',
                showCancelButton: true,
                confirmButtonText: 'Go to Cart',
                cancelButtonText: 'Continue Shopping'
            }).then(result => {
                if (result.isConfirmed) window.location.href = '/cart';
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Oops!',
                text: data.message || 'Could not add product to cart.'
            });
        }
    } catch (err) {
        console.error(err);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Something went wrong. Please try again.'
        });
    } finally {
        btn.prop('disabled', false);
    }
});
</script>
</body>
</html>