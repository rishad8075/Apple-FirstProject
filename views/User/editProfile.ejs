<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <style>
        :root {
            --sidebar-width: 280px;
            --apple-bg: #f5f5f7;
            --primary-blue: #0071e3;
        }

        body {
            background-color: var(--apple-bg);
            font-family: 'Plus Jakarta Sans', sans-serif;
            margin: 0;
        }

        /* --- Layout Control --- */
        .page-wrapper {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }

        .main-content {
            flex-grow: 1;
            padding: 30px;
            width: 100%;
            transition: all 0.3s ease;
        }

        @media (min-width: 992px) {
            .main-content { margin-left: var(--sidebar-width); }
        }

        @media (max-width: 991px) {
            .main-content { margin-left: 0; padding: 15px; }
            .page-wrapper { flex-direction: column; }
        }

        /* --- Profile Card UI --- */
        .edit-card {
            background: #ffffff;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.03);
            max-width: 700px;
            margin: 0 auto;
        }

        .profile-image-section {
            position: relative;
            width: 140px;
            height: 140px;
            margin: 0 auto 50px;
        }

        .profile-image-section img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #fff;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .image-overlay-btns {
            position: absolute;
            bottom: -20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 8px;
            width: max-content;
        }

        .img-btn {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 11px;
            font-weight: 600;
            border: none;
            color: white;
            cursor: pointer;
            transition: 0.2s;
        }

        .btn-change { background: #000; }
        .btn-remove { background: #ff3b30; }
        .img-btn:hover { opacity: 0.8; transform: translateY(-1px); }

        /* --- Form Styling --- */
        .form-label {
            font-weight: 600;
            font-size: 0.9rem;
            color: #1d1d1f;
            margin-bottom: 8px;
        }

        .form-control {
            background-color: #fbfbfd;
            border: 1px solid #d2d2d7;
            border-radius: 12px;
            padding: 12px 15px;
            font-size: 0.95rem;
            transition: 0.2s;
        }

        .form-control:focus {
            background-color: #fff;
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 4px rgba(0, 113, 227, 0.1);
        }

        .error-msg {
            color: #ff3b30;
            font-size: 0.75rem;
            margin-bottom: 5px;
            font-weight: 500;
        }

       

        .btn-save:hover {
            background: #0077ed;
            transform: scale(1.01);
        }

        /* --- Cropper Modal --- */
        .modal-content { border-radius: 24px; border: none; }
        #cropImage { max-width: 100%; display: block; }
        .btn-group-custom { display: flex; gap: 15px; margin-top: 30px; }
        
        .btn-save { background: var(--primary-blue); border: none; flex: 2; padding: 12px; border-radius: 12px; font-weight: 700; color: white; }
        .btn-cancel { background: #e8e8ed; border: none; flex: 1; padding: 12px; border-radius: 12px; font-weight: 600; color: #1d1d1f; text-decoration: none; text-align: center; }
    </style>
</head>

<body>

<%- include("../partials/header.ejs") %>

<div class="page-wrapper">
    <%- include("../partials/UserSide-bar.ejs", { activeLink: 'profile' }) %>

    <div class="main-content">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb" style="font-size: 0.8rem;">
                <li class="breadcrumb-item"><a href="/" class="text-muted text-decoration-none">Home</a></li>
                <li class="breadcrumb-item"><a href="/user/profile" class="text-muted text-decoration-none">Profile</a></li>
                <li class="breadcrumb-item active text-dark fw-bold">Edit Profile</li>
            </ol>
        </nav>

        <div class="edit-card">
            <h4 class="fw-bold mb-4 text-center">Edit Personal Information</h4>

            <form id="editProfileForm" action="/user/profileEdit" method="POST" enctype="multipart/form-data">
                
                <div class="profile-image-section">
                    <img id="profileImage" src="<%= user.profileImage || '/images/user-default.png' %>" alt="Profile Image">
                    <div class="image-overlay-btns">
                        <button type="button" class="img-btn btn-change" onclick="document.getElementById('profileImageInput').click()">
                            <i class="fas fa-camera me-1"></i> Change
                        </button>
                        <button type="button" class="img-btn btn-remove" onclick="removeImage()">
                            <i class="fas fa-trash me-1"></i> Remove
                        </button>
                    </div>
                    <input type="file" id="profileImageInput" name="profileImage" class="d-none" accept="image/*">
                </div>

                <div class="row">
                    <div class="col-12 mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <div id="error1" class="error-msg"></div>
                        <input type="text" id="name" name="name" class="form-control" value="<%= user.name %>" placeholder="Enter your name">
                    </div>

                    <div class="col-12 mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <div id="error3" class="error-msg"></div>
                        <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" value="<%= user.phoneNumber || '' %>" placeholder="10-digit mobile number">
                    </div>

                    <div class="col-12 mb-4">
                        <label for="dob" class="form-label">Date of Birth</label>
                        <input type="date" id="dob" name="dob" class="form-control" value="<%= user.dob ? user.dob.toISOString().split('T')[0] : '' %>">
                    </div>
                </div>
                
                <div class="btn-group-custom">
                    <a href="/user/profile" class="btn-cancel">Cancel</a>
                    <button type="submit" class="btn-save shadow-sm">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="cropModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="fw-bold m-0">Crop Photo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <div style="max-height: 400px; overflow: hidden;">
                    <img id="cropImage" src="">
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-dark w-100 rounded-3 py-2 fw-bold" id="cropBtn">Crop & Save</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
const profileImage = document.getElementById('profileImage');
const profileImageInput = document.getElementById('profileImageInput');
const cropModal = new bootstrap.Modal(document.getElementById('cropModal'));
const cropImage = document.getElementById('cropImage');
let cropper;
let imageRemoved = false;

profileImageInput.addEventListener('change', (e) => {
    const file = e.target.files[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = () => {
        cropImage.src = reader.result;
        cropModal.show();
        // Destroy existing cropper instance if it exists
        if(cropper) cropper.destroy();
        cropper = new Cropper(cropImage, { aspectRatio: 1, viewMode: 1, background: false });
    };
    reader.readAsDataURL(file);
});

document.getElementById('cropBtn').addEventListener('click', () => {
    const canvas = cropper.getCroppedCanvas({ width: 300, height: 300 });
    canvas.toBlob((blob) => {
        const fileInput = new File([blob], 'profile.png', { type: 'image/png' });
        const dataTransfer = new DataTransfer();
        dataTransfer.items.add(fileInput);
        profileImageInput.files = dataTransfer.files;

        profileImage.src = URL.createObjectURL(blob);
        cropModal.hide();
        cropper.destroy();
        imageRemoved = false;
    });
});

function removeImage() {
    profileImage.src = '/images/user-default.png';
    profileImageInput.value = "";
    imageRemoved = true;
}

document.getElementById('editProfileForm').addEventListener('submit', function(e) {
    if (imageRemoved) {
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'removeImage';
        input.value = 'true';
        this.appendChild(input);
    }

    const nameField = document.getElementById("name");
    const phoneNumber = document.getElementById("phoneNumber");
    // const email = document.getElementById("email"); // Email was in your script but not in your HTML inputs

    const error1 = document.getElementById("error1");
    const error3 = document.getElementById("error3");

    let isValid = true;
    error1.textContent = "";
    error3.textContent = "";

    if (nameField.value.trim().length < 3) {
        error1.textContent = "Name must be at least 3 characters long.";
        isValid = false;
    }

    const phoneRegex = /^[0-9]{10,15}$/;
    if (phoneNumber.value.trim() && !phoneRegex.test(phoneNumber.value.trim())) {
        error3.textContent = "Phone number must be 10-15 digits.";
        isValid = false;
    }

    if (!isValid) e.preventDefault();
});
</script>
</body>
</html>