<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address Management</title>
    
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        
        .account-page-wrapper {
            display: flex;
             margin-left: 250px;
                padding: 20px;
            min-height: calc(100vh - 50px); 
            max-width: 1400px;
            margin: 0 auto;
        }

        /* --- Main Content Area Styling (Adjusted for exact look) --- */
        .account-content {
            flex-grow: 1;
            background-color: #F5F5F5; /* Light Gray background from image */
            padding: 50px 30px; /* Vertical padding to match the image */
        }

        /* --- MY ADDRESSES Title --- */
        .my-addresses-title {
            font-size: 24px;
            font-weight: 600;
            color: #333;
            margin-bottom: 40px;
            text-align: center;
        }

        /* --- Add New Address Button --- */
        .btn-add-new-address {
            display: block;
            width: 100%;
            max-width: 400px;
            margin: 0 auto 40px auto;
            padding: 15px 25px;
            background-color: transparent;
            color: #000;
            border: 1px solid #000;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 500;
            transition: background-color 0.2s, color 0.2s;
        }

        .btn-add-new-address:hover {
            background-color: #000;
            color: #fff;
        }

        /* --- Individual Address Card --- */
        .address-display-card {
            background-color: #fff;
            padding: 25px 30px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            max-width: 600px;
            margin: 0 auto 25px auto;
            display: flex;
            align-items: flex-start;
            position: relative;
        }

        .address-display-card .icon-container {
            flex-shrink: 0;
            margin-right: 20px;
            color: #000;
            font-size: 24px;
        }

        .address-display-card .address-details p {
            margin-bottom: 5px;
            color: #555;
            font-size: 15px;
            line-height: 1.4;
        }

        .address-display-card .address-details .full-name {
            font-weight: 600;
            color: #000;
            margin-bottom: 10px;
            font-size: 16px;
        }
        
        /* Default Tag Styling */
        .address-display-card .default-tag {
            position: absolute;
            top: 15px;
            right: 15px;
            background-color: #FFD700;
            color: #000;
            padding: 3px 10px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 600;
        }

        /* Edit/Remove Buttons */
        .address-actions-bottom {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 20px;
            padding-top: 15px;
            border-top: 1px solid #eee;
            width: 100%; /* Ensure actions take full width below details */
        }
        
        .address-actions-bottom button {
            background-color: transparent;
            border: 1px solid #ccc;
            color: #555;
            padding: 8px 20px;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.2s;
        }
        .address-actions-bottom button:hover {
            border-color: #000;
            color: #000;
            background-color: #f0f0f0;
        }

        /* --- Add New Address Form Card (Modal content styling) --- */
        .add-address-card {
            background-color: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }
        .add-address-card .form-control {
            border-radius: 6px;
            padding: 10px;
            background-color: #f7f7f7;
            border: 1px solid #eee;
            margin-bottom: 15px;
        }
        .btn-save-address {
            background-color: #FF9500;
            color: #000;
            font-weight: 600;
            border: none;
            padding: 10px 25px;
            border-radius: 6px;
            width: 100%;
        }
           .error-text {
        color: red;
        font-size: 0.9rem;
        margin-top: 3px;
    }
    .form-error {
        border-color: red !important;
    }
    </style>
</head>
<body>

    <%- include("../partials/header") %>

    <div class="account-page-wrapper">
        
        <%- include("../partials/UserSide-bar.ejs", { activeLink: 'addresses' }) %>

        <div class="account-content">
            
            <h2 class="my-addresses-title">MY ADDRESSES</h2>

            <button type="button" style="color: #000;margin-left: 22rem; background-color: #FFD700; box-shadow: #000;width: 19rem;" class="btn btn-add-new-address" data-bs-toggle="modal" data-bs-target="#addAddressModal">
                ADD NEW ADDRESS+
            </button>
         

          

            <% addresses.forEach(addr => { %>
                <div class="address-display-card">
                    <div class="icon-container">
                        <i class="fas fa-map-marker-alt"></i> 
                    </div>
                    <div class="address-details flex-grow-1">
                        <p class="full-name"><%= addr.fullname %></p>
                        <p><%= addr.houseName %>, <%= addr.locality %></p>
                        <p><%= addr.district %>, <%= addr.state %> - <%= addr.pincode %></p>
                        <p>Phone: <%= addr.mobile %></p>
                        <div style="flex-grow: 1;"></div>
                    </div>
                    
                    <% if (addr.isDefault) { %>
                        <span class="default-tag">DEFAULT</span>
                    <% } %>

                    <div class="address-actions-bottom">
                        <button type="button" class="btn" onclick="editAddress('<%= addr._id %>')">Edit</button>

                        <button type="button" class="btn btn-remove" data-id="<%= addr._id %>">Remove</button>

                       <% if (!addr.isDefault) { %>
                       <button 
                            type="button" 
                            class="btn btn-set-default" 
                            data-id="<%= addr._id %>" 
                            style="border-color:#FFD700; color: #FFD700;">
                            Set Default
                        </button>
                    <% } %>
                    </div>
                </div>
            <% }) %>
            
        </div>
        
    </div>
    
   


    <div class="modal fade" id="addAddressModal" tabindex="-1" aria-labelledby="addAddressModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content add-address-card">
                <div class="modal-header d-flex justify-content-between align-items-center" style="border-bottom: none; padding-bottom: 0;">
                    <h2 class="modal-title" id="addAddressModalLabel" style="font-weight: 700; font-size: 1.6rem;">ADD NEW ADDRESS</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="padding-top: 0;">
                   <form id="addAddressForm" action="/user/add-address" method="POST">

    <div class="form-group mb-2">
        <input type="text" class="form-control" name="fullname" placeholder="Fullname" >
        <div class="error-text" id="fullnameError"></div>
    </div>

    <div class="form-group mb-2">
        <input type="email" class="form-control" name="email" placeholder="Email" >
        <div class="error-text" id="emailError"></div>
    </div>

    <div class="form-group mb-2">
        <input type="tel" class="form-control" name="phoneNumber" placeholder="Mobile No" >
        <div class="error-text" id="mobileError"></div>
    </div>

    <div class="form-group mb-2">
        <input type="text" class="form-control" name="houseName" placeholder="House Name" >
        <div class="error-text" id="houseNameError"></div>
    </div>

    <div class="form-group mb-2">
        <input type="text" class="form-control" name="locality" placeholder="Locality">
        <div class="error-text" id="localityError"></div>
    </div>

    <div class="row g-2 mb-3">
        <div class="col-md-6">
            <input type="text" class="form-control" name="pincode" placeholder="Pincode" >
            <div class="error-text" id="pincodeError"></div>
        </div>
        <div class="col-md-6">
            <input type="text" class="form-control" name="district" placeholder="District" >
            <div class="error-text" id="districtError"></div>
        </div>
    </div>

    <div class="form-group mb-2">
        <input type="text" class="form-control" name="state" placeholder="State" >
        <div class="error-text" id="stateError"></div>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="isDefault" id="isDefault">
        <label class="form-check-label" for="isDefault">
            Set as default address
        </label>
    </div>

    <button type="submit" class="btn btn-save-address btn-secondary">Save Address</button>
</form>
                </div>
            </div>
        </div>
    </div>
     <%- include("../partials/footer.ejs") %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
<script>

document.querySelectorAll('.btn-set-default').forEach(button => {
    button.addEventListener('click', function() {
        const addressId = this.dataset.id; // must not be undefined
       

        Swal.fire({
            title: "Set this Address as default?",
            icon: "question",
            showCancelButton: true,
            confirmButtonColor: '#FF9500',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, set as default'
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/user/set-default-address/${addressId}`, {
                    method: "PATCH",
                    headers: { "Content-Type": "application/json" }
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire('Updated!', data.message, 'success')
                            .then(() => window.location.reload());
                    } else {
                        Swal.fire('Error!', data.message, 'error');
                    }
                })
                .catch(err => {
                    console.error(err);
                    Swal.fire('Error!', 'Server error', 'error');
                });
            }
        });
    });
});


   function editAddress(id){
    window.location.href =`/user/edit-address/${id}`
   }

document.getElementById("addAddressForm").addEventListener("submit", function(e){
    e.preventDefault();

    let isValid = true;

    const resetError = (field) => {
        field.classList.remove("form-error");
        const errDiv = document.getElementById(field.name + "Error");
        if(errDiv) errDiv.innerText = "";
    }

    const setError = (field, message) => {
        field.classList.add("form-error");
        const errDiv = document.getElementById(field.name + "Error");
        if(errDiv) errDiv.innerText = message;
        isValid = false;
    }

    const fullname = this.fullname;
    const email = this.email;
    const mobile = this.phoneNumber;
    const houseName = this.houseName;
    const locality = this.locality;
    const pincode = this.pincode;
    const district = this.district;
    const state = this.state;

    const nameRegex = /^[A-Za-z ]+$/;
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const mobileRegex = /^[0-9]{10}$/;
    const pincodeRegex = /^[0-9]{6}$/;

    [fullname,email,mobile,houseName,locality,pincode,district,state].forEach(resetError);

    if(fullname.value.trim().length < 3 || !nameRegex.test(fullname.value.trim())){
        setError(fullname, "Enter a valid full name (letters only, min 3 chars).");
    }
    if(!emailRegex.test(email.value.trim())){
        setError(email, "Enter a valid email address.");
    }
    if(!mobileRegex.test(mobile.value.trim())){
        setError(mobile, "Mobile number must be 10 digits.");
    }
    if(houseName.value.trim().length < 2){
        setError(houseName, "House name must be at least 2 characters.");
    }
    if(locality.value.trim().length < 2){
        setError(locality, "Locality must be at least 2 characters.");
    }
    if(!pincodeRegex.test(pincode.value.trim())){
        setError(pincode, "Pincode must be exactly 6 digits.");
    }
    if(district.value.trim().length < 2 || !nameRegex.test(district.value.trim())){
        setError(district, "District must contain letters only.");
    }
    if(state.value.trim().length < 2 || !nameRegex.test(state.value.trim())){
        setError(state, "State must contain letters only.");
    }

    if(isValid){
        // Prepare form data
        const formData = new FormData(this);

        // Send data using fetch
      fetch("/user/add-address", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
        fullname: fullname.value,
        email: email.value,
        mobile: mobile.value,
        houseName: houseName.value,
        locality: locality.value,
        pincode: pincode.value,
        district: district.value,
        state: state.value,
        isDefault: document.getElementById("isDefault").checked
    })
})
        .then(res => res.json())  // Make sure your server responds with JSON
        .then(data => {
            if(data.success){
                Swal.fire({
                    icon: 'success',
                    title: 'Address Added!',
                    text: data.message || 'Your address has been saved successfully.',
                    timer: 2000,
                    showConfirmButton: false
                });
                // Optionally, reset form and close modal
                
                this.reset();
                const modal = bootstrap.Modal.getInstance(document.getElementById('addAddressModal'));
                modal.hide();
                window.location.reload()
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message || 'Something went wrong.'
                });
            }
        })
        .catch(err => {
            console.error(err);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Server error. Please try again later.'
            });
        });
    }
});
document.querySelectorAll('.btn-remove').forEach(button => {
    button.addEventListener('click', function() {
        const addressId = this.dataset.id;

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#FF9500',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/user/delete-address/${addressId}`, {
                    method: 'DELETE'
                })
                .then(res => res.json())
                .then(data => {
                    if(data.success){
                        Swal.fire('Deleted!', data.message, 'success')
                            .then(() => location.reload());
                    } else {
                        Swal.fire('Error!', data.message, 'error');
                    }
                })
                .catch(err => {
                    console.error(err);
                    Swal.fire('Error!', 'Server error', 'error');
                });
            }
        })
    });
});

</script>

</body>
</html>