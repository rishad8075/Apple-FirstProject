<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Coupons</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        :root {
            --sidebar-width: 280px;
            --bg-soft: #f5f5f7;
            --apple-blue: #0071e3;
            --coupon-yellow: #ffcc00; /* Your requested yellow */
        }

        body {
            background-color: var(--bg-soft);
            font-family: 'Plus Jakarta Sans', sans-serif;
            margin: 0;
        }

        /* --- Layout Logic (Fixed Sidebar Overlap) --- */
        .page-container {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }

        .main-content {
            flex-grow: 1;
            padding: 30px;
            width: 100%;
            transition: all 0.3s ease;
        }

        @media (min-width: 992px) {
            .main-content { margin-left: var(--sidebar-width); }
        }

        @media (max-width: 991px) {
            .main-content { margin-left: 0; padding: 15px; }
            .page-container { flex-direction: column; }
        }

        /* --- Coupon Card Design --- */
        .coupon-card {
            background: #ffffff;
            border-radius: 18px;
            padding: 25px;
            margin-bottom: 20px;
            border: 1px solid rgba(0,0,0,0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 15px rgba(0,0,0,0.03);
            position: relative;
            overflow: hidden;
        }

        /* Dashed divider look */
        .coupon-card::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 6px;
            background: var(--coupon-yellow);
        }

        .coupon-info h4 {
            font-weight: 700;
            color: #1d1d1f;
            margin-bottom: 8px;
        }

        .coupon-info p {
            margin: 2px 0;
            font-size: 0.9rem;
            color: #6e6e73;
        }

        /* --- Coupon Interaction Area --- */
        .coupon-action {
            min-width: 200px;
            text-align: right;
        }

        .coupon-code-input {
            background: #fbfbfd;
            border: 2px dashed #d2d2d7;
            font-family: monospace;
            font-weight: 700;
            font-size: 1.1rem;
            color: #1d1d1f;
            text-align: center;
            border-radius: 10px;
            margin-bottom: 10px;
        }

        /* The Yellow Button */
        .btn-copy {
            background: var(--coupon-yellow);
            color: #000;
            border: none;
            font-weight: 600;
            border-radius: 12px;
            padding: 10px;
            transition: 0.2s;
        }

        .btn-copy:hover {
            background: #e6b800;
            transform: translateY(-2px);
        }

        @media (max-width: 768px) {
            .coupon-card { flex-direction: column; align-items: stretch; }
            .coupon-action { margin-top: 20px; text-align: center; }
        }
    </style>
</head>
<body>

<%- include('../partials/header') %>

<div class="page-container">
   <%- include('../partials/UserSide-bar.ejs', { activeLink: 'coupons' }) %>

    <div class="main-content">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb" style="font-size: 0.85rem;">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Home</a></li>
                <li class="breadcrumb-item"><a href="/user/profile" class="text-decoration-none text-muted">Profile</a></li>
                <li class="breadcrumb-item active fw-bold text-dark">My Coupons</li>
            </ol>
        </nav>

        <h3 class="fw-bold mb-4">Available Coupons</h3>

        <% if (coupons.length === 0) { %>
            <div class="text-center p-5 bg-white rounded-4 border">
                <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                <p class="text-muted">No coupons available at the moment.</p>
            </div>
        <% } %>

        <div class="row">
            <% coupons.forEach(coupon => { %>
                <div class="col-12">
                    <div class="coupon-card">
                        <div class="coupon-info">
                            <h4>
                                ðŸŽ‰ <%= coupon.discountType === 'percentage' ? coupon.discountValue + '%' : 'â‚¹' + coupon.discountValue %> OFF
                            </h4>
                            <p><strong>Valid on:</strong> All eligible products</p>
                            <p><i class="fas fa-shopping-bag me-1"></i> Min Purchase: <strong>â‚¹<%= coupon.minOrderAmount %></strong></p>
                            <p><i class="far fa-calendar-alt me-1"></i> Expires: <%= new Date(coupon.expiryDate).toLocaleDateString('en-IN') %></p>
                        </div>

                        <div class="coupon-action">
                            <input type="text" class="form-control coupon-code-input mb-2" value="<%= coupon.code %>" readonly id="coupon-<%= coupon._id %>">
                            <button class="btn btn-copy w-100" data-id="<%= coupon._id %>">
                                <i class="far fa-copy me-2"></i>Copy Code
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
document.querySelectorAll('.btn-copy').forEach(btn => {
    btn.addEventListener('click', () => {
        const id = btn.dataset.id;
        const input = document.getElementById('coupon-' + id);
        input.select();
        input.setSelectionRange(0, 99999);
        navigator.clipboard.writeText(input.value).then(() => {
            Swal.fire({
                title: 'Copied!',
                text: 'Coupon code ' + input.value + ' copied.',
                icon: 'success',
                confirmButtonColor: '#ffcc00'
            });
        }).catch(err => {
            Swal.fire('Error', 'Failed to copy.', 'error');
        });
    });
});
</script>

</body>
</html>