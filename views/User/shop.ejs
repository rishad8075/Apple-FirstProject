<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>APPLE - Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #0d6efd;
            --dark: #212529;
        }
        body { font-family: 'Segoe UI', system-ui, sans-serif; }
        .main-container { max-width: 1200px; margin: 20px auto; }
        .product-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px; }
        .product-card { border: 1px solid #ddd; padding: 15px; border-radius: 8px; text-align: center; position: relative; background: #fff; transition: transform 0.3s, box-shadow 0.3s; }
        .product-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.1); }
        .product-img { max-width: 100%; max-height: 180px; object-fit: contain; margin-bottom: 10px; }
        .add-to-cart-btn { background-color: var(--dark); color: #fff; padding: 8px; border: none; border-radius: 5px; cursor: pointer; width: 100%; margin-top: 5px; }
        .add-to-cart-btn:hover { background-color: var(--primary); }
        .wishlist-btn { position: absolute; top: 10px; right: 10px; background: rgba(255,255,255,0.8); border: none; width: 30px; height: 30px; border-radius: 50%; display: flex; align-items: center; justify-content: center; cursor: pointer; color: #ccc; }
        .wishlist-btn.active { color: red; }
        .filter-section { margin-bottom: 20px; }
        .filter-title { font-weight: bold; margin-bottom: 10px; }
        .filter-item a, .price-option { text-decoration: none; display: block; padding: 5px; border-radius: 5px; color: #333; cursor: pointer; }
        .filter-item.active a, .price-option.active { background-color: #e9ecef; color: var(--primary); font-weight: 500; }
        .pagination { display: flex; justify-content: center; gap: 5px; margin: 30px 0; flex-wrap: wrap; }
        .page-link { padding: 8px 15px; border: 1px solid #ddd; color: #333; text-decoration: none; border-radius: 5px; }
        .page-link.active { background-color: var(--primary); color: white; border-color: var(--primary); }
        .no-products { text-align: center; padding: 50px; grid-column: 1 / -1; }
        @media (max-width: 768px) {
            .sidebar { width: 100%; margin-bottom: 20px; }
        }
    </style>
</head>
<body>
    <%- include("../partials/header.ejs") %>

    <div class="main-container">
        <!-- Search -->
        <div class="search-section mb-4">
            <form id="searchForm" class="d-flex">
                <input type="text" name="search" class="form-control me-2 search-input" placeholder="Search products..." value="<%= searchQuery || '' %>">
                <% if (searchQuery) { %>
                    <span id="searchClear" class="btn btn-outline-secondary"><i class="fas fa-times"></i></span>
                <% } %>
                <button type="submit" class="btn btn-primary ms-2"><i class="fas fa-search"></i> Search</button>
            </form>
        </div>

        <div class="d-flex gap-3 flex-wrap">
            <!-- Sidebar -->
            <aside class="sidebar flex-shrink-0" style="min-width:250px;">
                <!-- Categories -->
                <div class="filter-section">
                    <div class="filter-title">Categories</div>
                    <ul class="list-unstyled">
                        <li class="filter-item <%= !categoryFilter ? 'active' : '' %>">
                            <a href="<%= generateShopUrl({ category: null }) %>">All Categories</a>
                        </li>
                        <% categories.forEach(cat => { %>
                            <li class="filter-item <%= categoryFilter === cat._id.toString() ? 'active' : '' %>">
                                <a href="<%= generateShopUrl({ category: cat._id.toString() }) %>">
                                    <%= cat.name %> (<%= cat.productCount %>)
                                </a>
                            </li>
                        <% }); %>
                    </ul>
                </div>

                <!-- Price -->
                <div class="filter-section">
                    <div class="filter-title">Filter by Price</div>
                    <% const priceRanges = ['0-50000','50000-100000','100000-150000','150000-']; %>
                    <% priceRanges.forEach(range => { %>
                        <div class="price-option <%= priceFilter === range ? 'active' : '' %>">
                            <a href="<%= generateShopUrl({ price: range }) %>" style="color:inherit;">
                                <% if(range==='0-50000'){ %>Under ₹50000<% } %>
                                <% if(range==='50000-100000'){ %>₹50000 - ₹100000<% } %>
                                <% if(range==='100000-150000'){ %>₹100000 - ₹150000<% } %>
                                <% if(range==='150000-'){ %>Above ₹150000<% } %>
                            </a>
                        </div>
                    <% }); %>
                </div>

                <a href="<%= generateShopUrl({ search:null, category:null, price:null, sort:null }) %>" class="btn btn-outline-secondary mt-3">Clear Filters</a>
            </aside>

            <!-- Products -->
            <main class="flex-grow-1">
                <!-- Sort -->
                <div class="d-flex justify-content-end mb-3">
                    <select id="sortSelect" class="form-select w-auto">
                        <option value="">Sort By</option>
                        <option value="price_asc" <%= sortOption === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                        <option value="price_desc" <%= sortOption === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                        <option value="name_asc" <%= sortOption === 'name_asc' ? 'selected' : '' %>>Name: A-Z</option>
                        <option value="name_desc" <%= sortOption === 'name_desc' ? 'selected' : '' %>>Name: Z-A</option>
                    </select>
                </div>

                <div class="product-grid">
                    <% if(products.length > 0) { %>
                        <% products.forEach(product => {
                            const variant = product.variants?.[0] || null;
                        %>
                            <div class="product-card">
                                <button class="wishlist-btn <%= product.isWishlisted ? 'active' : '' %>" data-product-id="<%= product._id %>">
                                    <i class="fas fa-heart"></i>
                                </button>
                                <a href="/productDetails/<%= product._id %>" style="text-decoration:none; color:inherit;">
                                    <img src="<%= variant?.images?.[0] || '/images/default-product.jpg' %>" class="product-img" alt="<%= product.productName %>">
                                    <h5><%= product.productName %></h5>
                                    <% if(variant) { %>
                                        <div>₹<%= variant.salePrice || variant.regularPrice %>
                                            <% if(variant.salePrice && variant.salePrice < variant.regularPrice){ %>
                                                <span class="text-muted text-decoration-line-through">₹<%= variant.regularPrice %></span>
                                            <% } %>
                                        </div>
                                    <% } %>
                                </a>
                                <button class="add-to-cart-btn" 
                                    data-product-id="<%= product._id %>" 
                                    data-variant-id="<%= variant ? variant._id : '' %>"
                                    data-stock="<%= variant ? variant.stock : 0 %>">
                                <% if (variant && variant.stock === 0) { %>
                                    Out of Stock
                                <% } else { %>
                                    <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                <% } %>
                                </button>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="no-products">
                            <h4>No products found</h4>
                            <p>Try adjusting your search or filter criteria</p>
                            <a href="<%= generateShopUrl({ search:null, category:null, price:null, sort:null }) %>" class="btn btn-primary mt-3">Clear Filters</a>
                        </div>
                    <% } %>
                </div>

                <!-- Pagination -->
                <% if(totalPages > 1) { %>
                    <div class="pagination">
                        <% if(currentPage > 1) { %>
                            <a href="<%= generateShopUrl({ page: currentPage - 1 }) %>" class="page-link">« Previous</a>
                        <% } %>
                        <% for(let i=1; i<=totalPages; i++){ %>
                            <a href="<%= generateShopUrl({ page: i }) %>" class="page-link <%= currentPage === i ? 'active' : '' %>"><%= i %></a>
                        <% } %>
                        <% if(currentPage < totalPages) { %>
                            <a href="<%= generateShopUrl({ page: currentPage + 1 }) %>" class="page-link">Next »</a>
                        <% } %>
                    </div>
                <% } %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

   <script>
$(document).ready(function() {
    // Search input clear button
    const searchInput = $('.search-input');
    const searchClear = $('#searchClear');
    
    if (searchInput.val().trim() !== '') searchClear.show();
    searchInput.on('input', function() { 
        searchClear.toggle(this.value.trim() !== ''); 
    });
    searchClear.on('click', function() { 
        searchInput.val(''); 
        searchClear.hide(); 
        $('#searchForm').submit(); 
    });

    // Sorting dropdown
    $('#sortSelect').on('change', function() {
        const url = new URL(window.location.href);
        if(this.value) { url.searchParams.set('sort', this.value); } 
        else { url.searchParams.delete('sort'); }
        window.location.href = url.toString();
    });

    // Wishlist toggle
    $('.wishlist-btn').on('click', function(e) {
        e.preventDefault();
        const btn = $(this);
        const productId = btn.data('product-id');
        $.post('/wishlist/toggle', { productId }, function(res) {
            if(res.success) btn.toggleClass('active');
        });
    });

    // Add to Cart - delegated click handler
    $(document).on('click', '.add-to-cart-btn', async function() {
        const btn = $(this);
        const productId = btn.data('product-id');
        const variantId = btn.data('variant-id');
        const stock = Number(btn.data('stock'));
        const quantity = 1;

        // Stock check
        if(stock === 0) {
            Swal.fire({
                icon: 'error',
                title: 'Out of Stock',
                text: 'This product is currently out of stock.'
            });
            return;
        }

        btn.prop('disabled', true);

        try {
            const res = await fetch('/cart/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId, variantId, quantity })
            });

            const data = await res.json();

            if(data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Added!',
                    text: 'Product added to your cart.',
                    showCancelButton: true,
                    confirmButtonText: 'Go to Cart',
                    cancelButtonText: 'Continue Shopping'
                }).then(result => {
                    if(result.isConfirmed) window.location.href = '/cart';
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops!',
                    text: data.message || 'Could not add product to cart.'
                });
            }
        } catch(err) {
            console.error(err);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Something went wrong. Please try again.'
            });
        } finally {
            btn.prop('disabled', false);
        }
    });

    // Search button click
    $('.user-search button').on('click', function() {
        const query = $('.user-search input').val();
        if(query.trim() !== '') window.location.href = '/shop?search=' + encodeURIComponent(query);
    });

    // Search input Enter key
    $('.user-search input').on('keypress', function(e) { 
        if(e.which === 13) $('.user-search button').click(); 
    });
});
</script>


    <%- include("../partials/footer.ejs") %>
</body>
</html>
