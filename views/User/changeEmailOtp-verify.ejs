<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification | Exclusive</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #eef2f3 0%, #dfe9f3 100%);
            font-family: "Inter", sans-serif;
        }

        .otp-card {
            max-width: 430px;
            width: 100%;
            background: #fff;
            border-radius: 20px;
            padding: 35px;
            margin: 40px auto;
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.12);
            animation: fadeIn 0.6s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .otp-title {
            font-weight: 700;
            color: #333;
        }

        .form-control {
            padding: 12px;
            border-radius: 12px;
            font-size: 15px;
        }

        .btn-primary {
            padding: 12px;
            border-radius: 12px;
            font-weight: 600;
            width: 100%;
        }

        .otp-timer {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #f1f1f1;
            font-size: 18px;
            font-weight: 600;
            margin: 15px auto;
            box-shadow: inset 0 0 10px rgba(0,0,0,0.1);
        }

        .resend-button {
            font-weight: 600;
        }

        a {
            text-decoration: none;
            font-weight: 600;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

<%- include("../partials/header.ejs") %>

<div class="otp-card">
    <h3 class="otp-title text-center mb-3">Email Verification</h3>

    <p class="text-center text-muted mb-4">
        Enter the OTP sent to your email.
    </p>

    <form onsubmit="return validateOtpForm()">
        <div class="mb-3">
            <label class="form-label">OTP</label>
            <input type="text" id="otp" name="otp" class="form-control" placeholder="Enter OTP" required>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Verify OTP</button>
    </form>

    <div class="otp-timer" id="otpTimer"></div>

    <div class="text-center mt-3">
        <button type="button" class="btn btn-link resend-button" onclick="resendOtp()">Resend OTP</button>
    </div>

    <% if (locals.message && message.length > 0) { %>
        <div class="alert alert-danger text-center mt-3"><%= message %></div>
    <% } %>

    <p class="text-center mt-4 text-muted">
        Already verified? <a href="/user/profile">go back to Profile</a>
    </p>
</div>

<!-- JS -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
let otpTimerInterval;
let timer = 60;

const otpTimerElement = document.getElementById("otpTimer");
const resendBtn = document.querySelector(".resend-button");
resendBtn.disabled = true;

function updateTimerColor(percentage){
    if (percentage > 50) otpTimerElement.style.backgroundColor = "#28a745";
    else if (percentage > 25) otpTimerElement.style.backgroundColor = "#ffc107";
    else otpTimerElement.style.backgroundColor = "#dc3545";
}

function startOtpTimer(){
    resendBtn.disabled = true;
    otpTimerElement.style.backgroundColor = "#28a745";

    otpTimerInterval = setInterval(() => {
        const minutes = Math.floor(timer / 60);
        const seconds = timer % 60;
        otpTimerElement.textContent = `${minutes}:${seconds < 10 ? "0" : ""}${seconds}`;

        updateTimerColor((timer / 60) * 100);

        if (--timer < 0) {
            clearInterval(otpTimerInterval);
            otpTimerElement.textContent = "Expired";
            otpTimerElement.style.backgroundColor = "red";
            resendBtn.disabled = false;
        }
    }, 1000);
}

function initializeOtpInterval(){
    clearInterval(otpTimerInterval);
    timer = 60;
    startOtpTimer();
}

initializeOtpInterval();

function validateOtpForm() {
    const otp = document.getElementById("otp").value;

    $.ajax({
        type: "POST",
        url: "/user/ChangeEmail-OtpVerify",
        contentType: "application/json",
        data: JSON.stringify({ otp }),
        success(response) {
            if (response.success) {
                Swal.fire({
                    icon: "success",
                    title: "OTP Verified Successfully",
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => window.location.href = response.redirectUrl);
            } else {
                Swal.fire({
                    icon: "error",
                    title: "Invalid OTP",
                    text: response.message,
                });
            }
        },
        error() {
            Swal.fire({
                icon: "error",
                title: "Error",
                text: "Failed to verify OTP. Please try again.",
            });
        }
    });

    return false;
}

function resendOtp(){
    if (resendBtn.disabled) return;

    initializeOtpInterval();

    $.ajax({
        type: "POST",
        url: "/user/resendOtp-changeEmail",
        success(response) {
            if (response.success) {
                Swal.fire({
                    icon: "success",
                    title: "OTP Resent Successfully",
                    showConfirmButton: false,
                    timer: 1500,
                });
            } else {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: "Failed to resend OTP.",
                });
            }
        },
        error() {
            Swal.fire({
                icon: "error",
                title: "Error",
                text: "Failed to resend OTP.",
            });
        }
    });
}
</script>

</body>
</html>
