<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>User Profile</title>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<!-- SweetAlert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>


/* --- Main Content --- */
.main-content {
    margin-left: 250px;
    padding: 20px;
    background-color: #f8f9fa;
}

/* Profile Image */
.profile-image-container { position: relative; display: inline-block; }
.profile-image-container img { border-radius: 50%; object-fit: cover; transition: transform 0.3s; }
.profile-overlay {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    border-radius: 50%; background-color: rgba(0,0,0,0.4);
    color: #fff; display: flex; justify-content: center; align-items: center;
    opacity: 0; cursor: pointer; transition: opacity 0.3s;
}
.profile-image-container:hover .profile-overlay { opacity: 1; }

/* Cards & Forms */
.card-section { margin-bottom: 30px; }
.card-section .card-header { font-weight: 600; font-size: 18px; }
.card-section .form-control { margin-bottom: 15px; }

/* Responsive */
@media (max-width: 992px) {
    .account-sidebar { position: relative; width: 100%; height: auto; padding: 10px 0; margin-bottom: 20px; box-shadow: none; }
    .main-content { margin-left: 0; }
}
</style>
</head>
<body class="bg-light">

<!-- Header -->
<header><%- include('../partials/header') %></header>
<nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a style="text-decoration: none;color: #000;" href="/"><i class="fas fa-home"></i> Home</a></li>
            <li class="breadcrumb-item"><a style="text-decoration: none;color: #000;" href="/user/profile">My Profile</a></li>
            <li class="breadcrumb-item active"></li>
        </ol>
    </nav>

<%- include('../partials/UserSide-bar.ejs') %>

<!-- Main Content -->
<div class="main-content">
    <h3 class="mb-4">My Profile</h3>

    <!-- Profile Card -->
    <div class="card card-section shadow-sm border-0">
        <div class="card-body d-flex flex-column flex-md-row align-items-center gap-4">
            <div class="profile-image-container text-center">
                <img src="<%= user.profileImage || '/images/user-default.png' %>" alt="Profile Image" width="140" height="140">
                <div class="profile-overlay" ">
                    <i class="fas fa-camera fa-lg"></i> 
                </div>
                <input type="file" id="profileImageInput" class="d-none" accept="image/*">
            </div>

            <div class="flex-grow-1">
                <p><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Phone:</strong> <%= user.phoneNumber || '-' %></p>
                <p><strong>Date of Birth:</strong> <%= user.dob ? user.dob.toDateString() : '-' %></p>

                <div class="mt-3 d-flex flex-wrap gap-2">
                    <a href="/user/edit-profile" class="btn btn-warning btn-sm">Edit Profile</a>
                    <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#changeEmailModal" onclick="changeEmail()" >Change Email</button>
                    
                </div>
            </div>
        </div>
    </div>

    <!-- Change Password -->
   <div class="card card-section shadow-sm border-0" id="changePasswordForm">
     
    <div class="card-header bg-warning text-dark">Change Password</div>
      <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                    <div class="alert alert-danger"><%= errorMessage %></div>
                <% } %>
    <div class="card-body">
       <form action="/user/change-password" method="POST">

    <!-- Current Password -->
    <div class="input-group mb-3">
        <input type="password" class="form-control" name="currentPassword" placeholder="Current Password" id="currentPassword">
        <button class="btn btn-dark" style="height: 40px;background-color: white;color: black;"  type="button" onclick="togglePassword('currentPassword', this)">üëÅÔ∏è</button>
    </div>

    <!-- New Password -->
    <div class="input-group mb-3">
        <input type="password" class="form-control" name="newPassword" placeholder="New Password" id="password">
        <button class="btn btn-dark" style="height: 40px;background-color: white;color: black;"  type="button" onclick="togglePassword('password', this)">üëÅÔ∏è</button>
    </div>
    <div id="error1" style="color: red;font-size: medium;"></div>

    <!-- Confirm Password -->
    <div class="input-group mb-3">
        <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm New Password" id="confirmPassword">
        <button class="btn btn-dark" style="height: 40px;background-color: white;color: black;" type="button" onclick="togglePassword('confirmPassword', this)">üëÅÔ∏è</button>
    </div>
    <div id="error2" style="color: red;font-size: medium;"></div>

    <button type="submit" class="btn btn-success">Update Password</button>
    <a href="/user/forgotPassword" class="btn btn-link">Forgot Password?</a>
</form>
    </div>
</div>

<!-- Change Email Modal -->


        
        

<!-- Footer -->
<%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function togglePassword(fieldId, btn) {
    const field = document.getElementById(fieldId);

    if (field.type === "password") {
        field.type = "text";
        btn.textContent = "HIDE";  // change icon/text
    } else {
        field.type = "password";
        btn.textContent = "üëÅÔ∏è";   // back to eye icon
    }
}

    function changeEmail() {
        window.location.href ="/user/ChangeEmail-valid";
        
    }
document.querySelector("#changePasswordForm form").addEventListener("submit", async function(e) {
    e.preventDefault();

    const currentPassword = document.querySelector("[name=currentPassword]");
    const password = document.getElementById("password");
    const confirmPassword = document.getElementById("confirmPassword");
    const error1 = document.getElementById("error1");
    const error2 = document.getElementById("error2");

    error1.textContent = "";
    error2.textContent = "";

    let valid = true;

    if (!password.value || !confirmPassword.value) {
        error1.textContent = "Password cannot be empty";
        valid = false;
    }

    if (password.value.length < 6) {
        error1.textContent = "Password must be at least 6 characters";
        valid = false;
    }

    if (password.value !== confirmPassword.value) {
        error2.textContent = "Passwords do not match";
        valid = false;
    }

    if (!valid) return;

    try {
        const response = await fetch("/user/change-password", {
            method: "PATCH",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                currentPassword: currentPassword.value,
                newPassword: password.value
            })
        });

        const data = await response.json();

        if (data.success) {
            Swal.fire("Updated!", data.message, "success").then(() => {
                window.location.reload();
            });
        } else {
            Swal.fire("Error", data.message, "error");
        }

    } catch (err) {
        Swal.fire("Error", "Something went wrong!", "error");
        console.log(err);
    }
});
</script>


</body>
</html>
