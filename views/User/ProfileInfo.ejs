<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>User Profile</title>

<!-- Bootstrap & FontAwesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<!-- SweetAlert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>


/* --- Main Content --- */
.main-content {
    margin-left: 250px;
    padding: 20px;
    background-color: #f8f9fa;
}

/* Profile Image */
.profile-image-container { position: relative; display: inline-block; }
.profile-image-container img { border-radius: 50%; object-fit: cover; transition: transform 0.3s; }
.profile-overlay {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    border-radius: 50%; background-color: rgba(0,0,0,0.4);
    color: #fff; display: flex; justify-content: center; align-items: center;
    opacity: 0; cursor: pointer; transition: opacity 0.3s;
}
.profile-image-container:hover .profile-overlay { opacity: 1; }

/* Cards & Forms */
.card-section { margin-bottom: 30px; }
.card-section .card-header { font-weight: 600; font-size: 18px; }
.card-section .form-control { margin-bottom: 15px; }

/* Responsive */
@media (max-width: 992px) {
    .account-sidebar { position: relative; width: 100%; height: auto; padding: 10px 0; margin-bottom: 20px; box-shadow: none; }
    .main-content { margin-left: 0; }
}
</style>
</head>
<body class="bg-light">

<!-- Header -->
<header><%- include('../partials/header') %></header>

<%- include('../partials/UserSide-bar.ejs') %>

<!-- Main Content -->
<div class="main-content">
    <h3 class="mb-4">My Profile</h3>

    <!-- Profile Card -->
    <div class="card card-section shadow-sm border-0">
        <div class="card-body d-flex flex-column flex-md-row align-items-center gap-4">
            <div class="profile-image-container text-center">
                <img src="<%= user.profileImage || '/images/user-default.png' %>" alt="Profile Image" width="140" height="140">
                <div class="profile-overlay" ">
                    <i class="fas fa-camera fa-lg"></i> 
                </div>
                <input type="file" id="profileImageInput" class="d-none" accept="image/*">
            </div>

            <div class="flex-grow-1">
                <p><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Phone:</strong> <%= user.phoneNumber || '-' %></p>
                <p><strong>Date of Birth:</strong> <%= user.dob ? user.dob.toDateString() : '-' %></p>

                <div class="mt-3 d-flex flex-wrap gap-2">
                    <a href="/editProfile" class="btn btn-warning btn-sm">Edit Profile</a>
                    <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#changeEmailModal">Change Email</button>
                    <button class="btn btn-danger btn-sm" data-bs-toggle="collapse" data-bs-target="#changePasswordForm">Change Password</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Change Password -->
   <div class="card card-section shadow-sm border-0" id="changePasswordForm">
    <div class="card-header bg-warning text-dark">Change Password</div>
    <div class="card-body">
        <form action="/account/profile/change-password" method="POST">
            <input type="password" class="form-control" name="currentPassword" placeholder="Current Password" required>
            <input type="password" class="form-control" name="newPassword" placeholder="New Password" required>
            <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm New Password" required>
            <button type="submit" class="btn btn-success">Update Password</button>
            <a href="/account/forgot-password" class="btn btn-link">Forgot Password?</a>
        </form>
    </div>
</div>

<!-- Change Email Modal -->
<div class="modal fade" id="changeEmailModal" tabindex="-1" aria-labelledby="changeEmailModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="changeEmailForm" action="/account/profile/change-email/request" method="POST">
        <div class="modal-header bg-dark text-white">
          <h5 class="modal-title" id="changeEmailModalLabel">Change Email</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <label for="newEmail" class="form-label">Enter New Email</label>
          <input type="email" class="form-control" id="newEmail" name="newEmail" required>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Send OTP</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Footer -->
<%- include('../partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
