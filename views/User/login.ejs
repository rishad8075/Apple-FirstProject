<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Exclusive Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #222;
            color: white;
        }
        .navbar {
            background-color: black;
            padding: 15px;
        }
        .navbar a {
            color: white;
        }
        .search-bar {
            width: 250px;
        }
        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 80vh;
            background-color: #333;
            padding: 20px;
        }
        .login-box {
            background-color: #444;
            padding: 30px;
            border-radius: 10px;
            text-align: center;
            width: 100%;
            max-width: 400px;
        }
        .login-box input {
            background-color: #555;
            color: white;
        }
        .login-box input::placeholder {
            color: #bbb;
        }
        .login-box button {
            background-color: #ffcc00;
            color: black;
            font-weight: bold;
        }
        .footer {
            background-color: black;
            padding: 20px 0;
            text-align: center;
        }
        .footer a {
            color: white;
            text-decoration: none;
        }
        .footer input {
            width: 250px;
            padding: 8px;
        }
        .footer img {
            width: 100px;
        }
    </style>
</head>
<body>

    <header>
        <%- include("../partials/header") %>

</header>

    <!-- Login Section -->
    <div class="container-fluid login-container">
        <div class="row">
            <div class="col-lg-6 text-center">
                <img src="/images/login page logo.webp" alt="Apple Logo" class="img-fluid" width="300">
            </div>
            <div class="col-lg-6 d-flex justify-content-center align-items-center">
                <div class="login-box">
                    <h3>Login</h3>
                    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                        <div class="alert alert-danger"><%= errorMessage %></div>
                    <% } %>
                    <form action="/login" method="post">
                    <p>Enter your details below</p>
                    <div id="error1" style="color: red;font-size: medium;"></div>
                    <input type="email" class="form-control mb-3" placeholder="Email" name="email" id="email">
                    <div id="error2" style="color: red;font-size: medium;"></div>
                    <div class="input-group my-2">
                    <input type="password" class="form-control mb-3" placeholder="Password" name="password" id="password" >
                            <button style="height: 40px; background-color: #444;" class="btn btn-outline-secondary" type="button" onclick="togglePassword('password', this)">
                            üëÅÔ∏è
                        </button>
                        </div>
                    <button type="submit" class="btn w-100">Log In</button>
                    <a href="/auth/google" class="btn btn-light w-100 mt-2">Sign up with Google</a>
                    <p class="mt-2"><a style="text-decoration: none;" href="/user/forgotPassword" class="text-white">Forgot Password?</a></p>
                </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer style="justify-content: space-between;" class="footer text-white" >
    
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
const email = document.getElementById("email");
const password = document.getElementById("password");
const error1 = document.getElementById("error1");
const error2 = document.getElementById("error2");

function togglePassword(fieldId, button) {
    const field = document.getElementById(fieldId);
    field.type = field.type === "password" ? "text" : "password";
    button.textContent = field.type === "password" ? "üëÅÔ∏è" : "HIDE";
}

document.querySelector("form").addEventListener("submit", function (e) {
    let isValid = true;

    error1.textContent = "";
    error2.textContent = "";

    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    // Email validation
    if (email.value.trim() === "") {
        error1.textContent = "Please enter your email.";
        isValid = false;
    } else if (!emailRegex.test(email.value.trim())) {
        error1.textContent = "Enter a valid email address.";
        isValid = false;
    }

    // Password validation
    if (password.value.trim() === "") {
        error2.textContent = "Please enter your password.";
        isValid = false;
    } else if (password.value.trim().length < 4) {
        error2.textContent = "Password must be at least 4 characters.";
        isValid = false;
    }

    if (!isValid) e.preventDefault();
});
</script>

</body>

</html>
