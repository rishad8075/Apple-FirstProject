    /* ===== SIDEBAR ===== */
    .sidebar {
      width: 240px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      background: #1c1c1c;
      padding-top: 20px;
      display: flex;
      flex-direction: column;
    }

    .sidebar h4 {
      margin-bottom: 20px;
      font-weight: bold;
      color: #fff;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      padding: 10px 20px;
      display: flex;
      align-items: center;
      gap: 10px;
      border-radius: 5px;
      margin: 2px 10px;
      transition: background 0.2s;
    }

    .sidebar a:hover {
      background: #333;
    }

    .sidebar a.text-danger:hover {
      background: #aa2222;
    }




