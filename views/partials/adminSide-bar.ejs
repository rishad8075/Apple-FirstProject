    <title>Document</title>
    <style>
         body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #121212;
      color: #fff;
    }
    .admin-container {
    background-color: transparent;
    min-height: 100vh;
    padding: 30px;
}

/* Admin Header */
.admin-header {
    background-color: #121214;
    border: 1px solid #ffffff33; /* white border */
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.5);
    padding: 15px 20px;
    margin-left: 250px;
    margin-bottom: 20px;
}

/* Admin Profile Image */
.admin-img {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 2px solid #ffffff55;
    box-shadow: 0 2px 8px rgba(0,0,0,0.5);
    object-fit: cover;
}

/* Admin Card */
.admin-card {
    margin-left: 250px;
    background: #181818;
    border: 1px solid #ffffff22; /* subtle white border */
    border-radius: 14px;
    padding: 28px;
    box-shadow: 0 0 25px rgba(0,0,0,0.45);
}

    /* ===== SIDEBAR ===== */
    .sidebar {
      width: 240px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      background: #1c1c1c;
      padding-top: 20px;
      display: flex;
      flex-direction: column;
    }

    .sidebar h4 {
      margin-bottom: 20px;
      font-weight: bold;
      color: #fff;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      padding: 10px 20px;
      display: flex;
      align-items: center;
      gap: 10px;
      border-radius: 5px;
      margin: 2px 10px;
      transition: background 0.2s;
    }

    .sidebar a:hover {
      background: #333;
    }

    .sidebar a.text-danger:hover {
      background: #aa2222;
    }




    </style>
