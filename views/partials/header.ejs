<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

<style>
    :root {
        --nav-bg: rgba(0, 0, 0, 0.8);
        --glass-blur: 15px;
        --accent-color: #0d6efd; 
        --text-muted: rgba(255, 255, 255, 0.7);
    }

    /* Premium Glassmorphism Navigation */
    .navbar-ultra {
        background: var(--nav-bg);
        backdrop-filter: blur(var(--glass-blur));
        -webkit-backdrop-filter: blur(var(--glass-blur));
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        padding: 0.8rem 0;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Logo Animation */
    .navbar-brand img {
        transition: transform 0.3s ease, filter 0.3s ease;
    }
    .navbar-brand:hover img {
        transform: scale(1.05);
        filter: brightness(1.2);
    }

    /* Elegant Nav Links */
    .nav-link {
        color: var(--text-muted) !important;
        font-size: 0.95rem;
        font-weight: 500;
        transition: all 0.3s ease !important;
        padding: 0.5rem 1.2rem !important;
    }

    .nav-link:hover {
        color: #fff !important;
    }

    /* Minimalist Indicator */
    .nav-link::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: 0;
        left: 50%;
        background: var(--accent-color);
        transition: all 0.3s ease;
        transform: translateX(-50%);
        border-radius: 2px;
    }

    .nav-link:hover::after {
        width: 20px;
    }

    /* Action Icons */
    .action-icon {
        color: var(--text-muted);
        transition: all 0.3s ease;
        position: relative;
        text-decoration: none;
    }

    .action-icon:hover {
        color: #fff;
        transform: translateY(-2px);
    }

    .badge-dot {
        position: absolute;
        top: -2px;
        right: -5px;
        background: var(--accent-color);
        width: 8px;
        height: 8px;
        border-radius: 50%;
        border: 2px solid #000;
    }

    /* Profile Avatar */
    .user-avatar {
        width: 35px;
        height: 35px;
        background: linear-gradient(45deg, var(--accent-color), #00c6ff);
        color: white;
        font-weight: 600;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
        transition: all 0.3s ease;
    }

    .dropdown:hover .user-avatar {
        box-shadow: 0 6px 15px rgba(13, 110, 253, 0.5);
    }

    /* Clean Dropdown */
    .custom-dropdown {
        background: rgba(18, 18, 18, 0.98);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        margin-top: 10px !important;
        padding: 8px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.4);
    }

    .dropdown-item {
        color: var(--text-muted) !important;
        border-radius: 8px;
        padding: 10px 16px;
        font-size: 0.9rem;
    }

    .dropdown-item:hover {
        background: rgba(255, 255, 255, 0.05) !important;
        color: #fff !important;
    }

    /* Mobile Menu Style */
    @media (max-width: 991.98px) {
        .navbar-collapse {
            background: #0a0a0a;
            margin-top: 15px;
            padding: 20px;
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }
    }
</style>

<nav class="navbar navbar-expand-lg navbar-dark navbar-ultra sticky-top">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="/images/header logo.webp" alt="Logo" width="40" height="40">
        </a>

        <div class="d-flex align-items-center d-lg-none gap-3">
            <a href="/cart" class="action-icon">
                <i class="fas fa-shopping-cart"></i>
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#ultraNav">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse" id="ultraNav">
            <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
                <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
            </ul>

            <div class="d-flex align-items-center gap-4">
                
                <a href="/wishlist" class="action-icon d-none d-lg-block">
                    <i class="far fa-heart fs-5"></i>
                    <span class="badge-dot"></span>
                </a>

                <a href="/cart" class="action-icon d-none d-lg-block">
                    <i class="fas fa-shopping-cart fs-5"></i>
                    <span class="badge-dot"></span>
                </a>

                <% if(locals.user) { %>
                    <div class="dropdown">
                        <a class="text-decoration-none dropdown-toggle d-flex align-items-center" 
                           href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="user-avatar">
                                <%= locals.user.name.charAt(0).toUpperCase() %>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end custom-dropdown shadow border-0">
                            <li><a class="dropdown-item" href="/user/Profile"><i class="bi bi-person me-2"></i> Account Info</a></li>
                            <li><a class="dropdown-item" href="/orders"><i class="bi bi-bag me-2"></i> My Orders</a></li>
                            <li><hr class="dropdown-divider border-secondary opacity-25"></li>
                            <li><a class="dropdown-item text-danger" href="/logout"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
                        </ul>
                    </div>
                <% } else { %>
                    <div class="d-flex align-items-center gap-2">
                        <a href="/login" class="btn btn-link text-white text-decoration-none btn-sm px-3">Log In</a>
                        <a href="/signup" class="btn btn-primary rounded-pill btn-sm px-4 fw-600 shadow-sm">Join</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</nav>